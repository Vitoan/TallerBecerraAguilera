@using TallerBecerraAguilera.Helpers
@model PaginatedList<TallerBecerraAguilera.Models.Proveedores>

<h2>Proveedores</h2>

<a asp-action="Create" class="btn btn-success mb-2">Agregar Proveedor</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Contacto</th>
            <th>Teléfono</th>
            <th>Condiciones</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Nombre</td>
                <td>@p.Contacto</td>
                <td>@p.Telefono</td>
                <td>@p.CondicionesCompra</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@p.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@p.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="d-flex justify-content-between align-items-center mt-3">
    <div>
        Página @Model.PageIndex de @Model.TotalPages
    </div>

    <div>
        <a asp-action="Index"
           asp-route-pageNumber="@(Model.PageIndex - 1)"
           class="btn btn-outline-primary @(!Model.HasPreviousPage ? "disabled" : "")">
            <i class="bi bi-arrow-left"></i> Anterior
        </a>

        <a asp-action="Index"
           asp-route-pageNumber="@(Model.PageIndex + 1)"
           class="btn btn-outline-primary @(!Model.HasNextPage ? "disabled" : "")">
            Siguiente <i class="bi bi-arrow-right"></i>
        </a>
    </div>
</div>
