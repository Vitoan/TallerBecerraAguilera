@model object
<h2 class="text-3xl font-bold text-indigo-800 mb-4">Proveedores</h2>

<div id="vue-proveedores" class="container mx-auto px-4 py-8">
    <div class="flex flex-col md:flex-row gap-8">

        <!-- Columna Izquierda: Formulario -->
        <div class="md:w-1/3 bg-white rounded-xl shadow-lg border border-gray-100 overflow-hidden">
            <div class="h-2 bg-gradient-to-r from-blue-500 to-indigo-600"></div>
            <div class="p-6">
                <h3 class="text-xl font-bold text-indigo-800 mb-4">
                    {{ editando ? 'Editar Proveedor' : 'Nuevo Proveedor' }}
                </h3>
                <div class="space-y-4">
                    <input v-model="nuevo.nombre" placeholder="Nombre / Razón Social"
                           class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 transition duration-200" />
                    <input v-model="nuevo.contacto" placeholder="Contacto"
                           class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 transition duration-200" />
                    <input v-model="nuevo.telefono" placeholder="Teléfono"
                           class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 transition duration-200" />
                    <input v-model="nuevo.condicionesCompra" placeholder="Condiciones de Compra"
                           class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 transition duration-200" />

                    <div class="flex gap-2 mt-4">
                        <button class="bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded-lg shadow-md transition duration-150"
                                v-on:click="guardarProveedor">
                            {{ editando ? 'Actualizar' : 'Agregar' }}
                        </button>
                        <button v-if="editando" class="bg-gray-300 hover:bg-gray-400 text-gray-700 font-semibold py-2 px-4 rounded-lg transition duration-150"
                                v-on:click="cancelarEdicion">
                            Cancelar
                        </button>
                    </div>

                    <div v-if="eliminando" class="bg-red-50 border-l-4 border-red-500 p-4 mt-4 rounded shadow-sm">
                        <p class="text-red-700 font-semibold">¿Seguro que querés eliminar a {{ nuevo.nombre }}?</p>
                        <div class="flex gap-2 mt-2">
                            <button class="bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded-lg"
                                    v-on:click="confirmarEliminacion">
                                Confirmar
                            </button>
                            <button class="bg-gray-300 hover:bg-gray-400 text-gray-700 font-semibold py-2 px-4 rounded-lg"
                                    v-on:click="cancelarEliminacion">
                                Cancelar
                            </button>
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <!-- Columna Derecha: Tabla -->
        <div class="md:w-2/3 bg-white rounded-xl shadow-lg border border-gray-100 overflow-hidden">
            <div class="overflow-x-auto">
                <table class="min-w-full leading-normal">
                    <thead>
                        <tr class="bg-indigo-50 border-b border-indigo-100 text-left">
                            <th class="px-5 py-3 text-xs font-bold text-indigo-600 uppercase tracking-wider">Nombre</th>
                            <th class="px-5 py-3 text-xs font-bold text-indigo-600 uppercase tracking-wider">Contacto</th>
                            <th class="px-5 py-3 text-xs font-bold text-indigo-600 uppercase tracking-wider">Teléfono</th>
                            <th class="px-5 py-3 text-xs font-bold text-indigo-600 uppercase tracking-wider">Condiciones</th>
                            <th class="px-5 py-3 text-xs font-bold text-indigo-600 uppercase tracking-wider text-right">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr v-for="p in proveedores" :key="p.id" class="hover:bg-gray-50 transition duration-150 border-b border-gray-200 last:border-b-0">
                            <td class="px-5 py-4">{{ p.nombre }}</td>
                            <td class="px-5 py-4">{{ p.contacto }}</td>
                            <td class="px-5 py-4">{{ p.telefono }}</td>
                            <td class="px-5 py-4">{{ p.condicionesCompra }}</td>
                            <td class="px-5 py-4 text-right">
                                <div class="flex justify-end gap-2">
                                    <button class="bg-yellow-400 hover:bg-yellow-500 text-white px-2 py-1 rounded" v-on:click="editarProveedor(p)">Editar</button>
                                    <button class="bg-red-600 hover:bg-red-700 text-white px-2 py-1 rounded" v-on:click="eliminarProveedor(p)">Eliminar</button>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/vue@3/dist/vue.global.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

    <script>
        const app = Vue.createApp({
            data() {
                return {
                    proveedores: [],
                    nuevo: { id: 0, nombre: '', contacto: '', telefono: '', condicionesCompra: '' },
                    editando: false,
                    eliminando: false
                }
            },
            mounted() {
                this.cargarProveedores();
            },
            methods: {
                cargarProveedores() {
                    axios.get('/Proveedores/GetAll')
                         .then(res => this.proveedores = res.data)
                         .catch(err => console.error(err));
                },
                guardarProveedor() {
                    if (!this.nuevo.nombre) { alert('Falta el nombre'); return; }

                    const url = this.editando ? '/Proveedores/Update' : '/Proveedores/Add';

                    axios.post(url, this.nuevo)
                         .then(res => {
                             this.cancelarEdicion();
                             this.cargarProveedores();
                         })
                         .catch(err => alert(err.response?.data || 'Error al guardar'));
                },
                editarProveedor(p) {
                    // Clonamos los datos para no perder la referencia
                    this.nuevo = { ...p };
                    this.editando = true;
                    this.eliminando = false;
                },
                eliminarProveedor(p) {
                    this.nuevo = { ...p };
                    this.eliminando = true;
                    this.editando = false;
                },
                confirmarEliminacion() {
                    axios.post('/Proveedores/Delete', { id: this.nuevo.id })
                         .then(res => {
                             this.nuevo = { id: 0, nombre: '', contacto: '', telefono: '', condicionesCompra: '' };
                             this.eliminando = false;
                             this.cargarProveedores();
                         })
                         .catch(err => alert('Error al eliminar'));
                },
                cancelarEdicion() {
                    this.nuevo = { id: 0, nombre: '', contacto: '', telefono: '', condicionesCompra: '' };
                    this.editando = false;
                },
                cancelarEliminacion() {
                    this.nuevo = { id: 0, nombre: '', contacto: '', telefono: '', condicionesCompra: '' };
                    this.eliminando = false;
                }
            }
        }).mount('#vue-proveedores');
    </script>
}
