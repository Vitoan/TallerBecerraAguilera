@model object
@{
    ViewData["Title"] = "Gestión de Proveedores";
}

@Html.AntiForgeryToken()

<div id="vue-proveedores" class="container mx-auto px-4 py-8" v-cloak>
    
    <div class="flex items-center gap-4 mb-8">
        <div class="p-3 bg-indigo-100 rounded-full text-indigo-600 shadow-sm">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
        </div>
        <div>
            <h1 class="text-3xl font-bold text-indigo-800">Proveedores</h1>
            <p class="text-gray-500 mt-1">Administración de empresas y contactos de suministro.</p>
        </div>
    </div>

    @if (TempData["Mensaje"] != null)
{
    <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-6 rounded shadow-sm flex justify-between items-center" role="alert">
        <div>
            <p class="font-bold">¡Éxito!</p>
            <p>@TempData["Mensaje"]</p>
        </div>
        <button type="button" onclick="this.parentElement.remove()" class="text-green-700 hover:text-green-900">
            <span class="text-2xl">&times;</span>
        </button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-6 rounded shadow-sm flex justify-between items-center" role="alert">
        <div>
            <p class="font-bold">¡Error!</p>
            <p>@TempData["Error"]</p>
        </div>
        <button type="button" onclick="this.parentElement.remove()" class="text-red-700 hover:text-red-900">
            <span class="text-2xl">&times;</span>
        </button>
    </div>
}

    <div class="flex flex-col lg:flex-row gap-8">

        <div class="lg:w-1/3">
            <div class="bg-white rounded-xl shadow-lg border border-gray-100 overflow-hidden sticky top-6">
                <div class="h-2 bg-gradient-to-r from-blue-500 to-indigo-600"></div>
                <div class="p-6">
                    <h3 class="text-xl font-bold text-indigo-800 mb-6 flex items-center gap-2">
                        <span v-if="editando" class="text-amber-500"><i class="bi bi-pencil-square"></i></span>
                        <span v-else class="text-green-500"><i class="bi bi-plus-circle"></i></span>
                        {{ editando ? 'Editar Proveedor' : 'Nuevo Proveedor' }}
                    </h3>

                    <div class="space-y-4">
                        <div class="relative">
                            <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-400">
                                <i class="bi bi-building"></i>
                            </span>
                            <input v-model="nuevo.nombre" placeholder="Razón Social / Nombre" class="w-full pl-10 pr-4 py-3 rounded-lg border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 transition outline-none" />
                        </div>

                        <div class="relative">
                            <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-400">
                                <i class="bi bi-person"></i>
                            </span>
                            <input v-model="nuevo.contacto" placeholder="Nombre de Contacto" class="w-full pl-10 pr-4 py-3 rounded-lg border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 transition outline-none" />
                        </div>

                        <div class="relative">
                            <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-400">
                                <i class="bi bi-telephone"></i>
                            </span>
                            <input v-model="nuevo.telefono" placeholder="Teléfono" class="w-full pl-10 pr-4 py-3 rounded-lg border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 transition outline-none" />
                        </div>

                        <div class="relative">
                            <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-400">
                                <i class="bi bi-file-text"></i>
                            </span>
                            <input v-model="nuevo.condicionesCompra" placeholder="Condiciones (ej: 30 días, Contado)" class="w-full pl-10 pr-4 py-3 rounded-lg border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 transition outline-none" />
                        </div>

                        <div class="flex gap-3 mt-6">
                            <button class="flex-1 bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded-lg shadow-md transition transform active:scale-95" v-on:click="guardarProveedor">
                                {{ editando ? 'Actualizar' : 'Agregar' }}
                            </button>
                            
                            <button v-if="editando" class="bg-gray-200 hover:bg-gray-300 text-gray-700 font-semibold py-2 px-4 rounded-lg transition" v-on:click="cancelarEdicion">
                                Cancelar
                            </button>
                        </div>

                        <div v-if="eliminando" class="bg-red-50 border border-red-200 p-4 mt-4 rounded-lg animate-pulse">
                            <p class="text-red-700 font-bold text-sm mb-3">¿Eliminar a "{{ nuevo.nombre }}"?</p>
                            <div class="flex gap-2">
                                <button class="bg-red-600 hover:bg-red-700 text-white text-xs font-bold py-2 px-3 rounded shadow" v-on:click="confirmarEliminacion">
                                    Confirmar
                                </button>
                                <button class="bg-white hover:bg-gray-50 text-gray-700 text-xs font-bold py-2 px-3 rounded border border-gray-300" v-on:click="cancelarEliminacion">
                                    Cancelar
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="lg:w-2/3">
            <div class="bg-white rounded-xl shadow-lg border border-gray-100 overflow-hidden min-h-[400px]">
                
                <div v-if="proveedores.length === 0" class="flex flex-col items-center justify-center h-full p-10 text-center">
                    <div class="bg-gray-50 p-4 rounded-full mb-3">
                        <i class="bi bi-inbox text-4xl text-gray-300"></i>
                    </div>
                    <h3 class="text-lg font-medium text-gray-900">No hay proveedores</h3>
                    <p class="text-gray-500 text-sm mt-1">Utiliza el formulario para registrar el primero.</p>
                </div>

                <div v-else class="overflow-x-auto">
                    <table class="min-w-full leading-normal">
                        <thead>
                            <tr class="bg-indigo-50 border-b border-indigo-100 text-left">
                                <th class="px-5 py-3 text-xs font-bold text-indigo-600 uppercase tracking-wider">Empresa</th>
                                <th class="px-5 py-3 text-xs font-bold text-indigo-600 uppercase tracking-wider">Contacto</th>
                                <th class="px-5 py-3 text-xs font-bold text-indigo-600 uppercase tracking-wider">Info</th>
                                <th class="px-5 py-3 text-xs font-bold text-indigo-600 uppercase tracking-wider text-right">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr v-for="p in proveedores" :key="p.id" class="hover:bg-gray-50 transition duration-150 border-b border-gray-100 last:border-b-0">
                                <td class="px-5 py-4">
                                    <div class="font-bold text-gray-800">{{ p.nombre }}</div>
                                    <div class="text-xs text-gray-500 mt-0.5">ID: {{ p.id }}</div>
                                </td>
                                <td class="px-5 py-4">
                                    <div class="text-sm text-gray-900"><i class="bi bi-person mr-1 text-gray-400"></i> {{ p.contacto }}</div>
                                    <div class="text-sm text-gray-500 mt-1"><i class="bi bi-telephone mr-1 text-gray-400"></i> {{ p.telefono }}</div>
                                </td>
                                <td class="px-5 py-4">
                                    <span v-if="p.condicionesCompra" class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800">
                                        {{ p.condicionesCompra }}
                                    </span>
                                    <span v-else class="text-gray-400 text-xs italic">Sin condiciones</span>
                                </td>
                                <td class="px-5 py-4 text-right">
                                    <div class="flex justify-end gap-2">
                                        <button class="text-amber-500 hover:text-amber-700 hover:bg-amber-50 p-2 rounded-full transition" title="Editar" v-on:click="editarProveedor(p)">
                                            <i class="bi bi-pencil-fill"></i>
                                        </button>
                                        <button class="text-red-500 hover:text-red-700 hover:bg-red-50 p-2 rounded-full transition" title="Eliminar" v-on:click="eliminarProveedor(p)">
                                            <i class="bi bi-trash-fill"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/vue@3/dist/vue.global.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

    <script>
        const app = Vue.createApp({
            data() {
                return {
                    proveedores: [],
                    nuevo: { id: 0, nombre: '', contacto: '', telefono: '', condicionesCompra: '' },
                    editando: false,
                    eliminando: false
                }
            },
            mounted() {
                // Configurar Token Anti-Forgery para Axios (Crucial en ASP.NET Core)
                const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
                axios.defaults.headers.common['RequestVerificationToken'] = token;
                
                this.cargarProveedores();
            },
            methods: {
                cargarProveedores() {
                    axios.get('/Proveedores/GetAll')
                         .then(res => this.proveedores = res.data)
                         .catch(err => console.error("Error cargando:", err));
                },
                guardarProveedor() {
                    if (!this.nuevo.nombre) { 
                        alert('El nombre es obligatorio'); 
                        return; 
                    }

                    const url = this.editando ? '/Proveedores/Update' : '/Proveedores/Add';

                    axios.post(url, this.nuevo)
                         .then(res => {
                             this.cancelarEdicion();
                             this.cargarProveedores();
                         })
                         .catch(err => {
                             console.error(err);
                             alert('Ocurrió un error al guardar. Revisa la consola.');
                         });
                },
                editarProveedor(p) {
                    this.nuevo = { ...p }; // Clonar objeto
                    this.editando = true;
                    this.eliminando = false;
                },
                eliminarProveedor(p) {
                    this.nuevo = { ...p };
                    this.eliminando = true;
                    this.editando = false;
                },
                confirmarEliminacion() {
                    axios.post('/Proveedores/Delete', { id: this.nuevo.id })
                         .then(res => {
                             this.cancelarEdicion(); // Resetea form
                             this.cargarProveedores();
                         })
                         .catch(err => alert('Error al eliminar.'));
                },
                cancelarEdicion() {
                    this.nuevo = { id: 0, nombre: '', contacto: '', telefono: '', condicionesCompra: '' };
                    this.editando = false;
                    this.eliminando = false;
                },
                cancelarEliminacion() {
                    this.cancelarEdicion();
                }
            }
        }).mount('#vue-proveedores');
    </script>
}