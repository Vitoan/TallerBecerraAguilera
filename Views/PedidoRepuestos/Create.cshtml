@model TallerBecerraAguilera.Models.PedidoRepuestos

<h2>Solicitar Repuesto</h2>

<form asp-action="Create" method="post">

    <input type="hidden" asp-for="PedidoId" value="@ViewBag.PedidoId" />

    <div class="form-group">
        <label>Repuesto</label>
        <select asp-for="RepuestoId" asp-items="ViewBag.Repuestos" class="form-control"></select>
    </div>

    <div class="form-group">
        <label>Cantidad</label>
        <input asp-for="CantidadSolicitada" type="number" class="form-control" min="1"/>
    </div>

    <button type="submit" class="btn btn-success">Generar Pedido</button>
    <a asp-controller="Repuestos" asp-action="Index" class="btn btn-secondary">Volver</a>
</form>
