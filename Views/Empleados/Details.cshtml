@model TallerBecerraAguilera.Models.Empleados
@{
    ViewData["Title"] = "Detalles del Empleado";
}

<h1>Detalles de @Model.NombreCompleto</h1>

<div class="form-group">
    <label>Código:</label> @Model.Id
</div>
<div class="form-group">
    <label>Nombre:</label> @Model.Nombre
</div>
<div class="form-group">
    <label>Apellido:</label> @Model.Apellido
</div>
<div class="form-group">
    <label>DNI:</label> @Model.Dni
</div>
<div class="form-group">
    <label>Teléfono:</label> @Model.Telefono
</div>
<div class="form-group">
    <label>Usuario:</label> @Model.UsuarioId
</div>
<div class="form-group">
    <label>Creado:</label> @Model.Created_at
</div>
<div class="form-group">
    <label>Actualizado:</label> @Model.Updated_at
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</p>
