@model TallerBecerraAguilera.Models.Empleados

@{
    ViewData["Title"] = "Detalles del Empleado";
    // Calculamos las iniciales para el avatar
    var iniciales = (Model.Nombre?.Substring(0, 1) ?? "") + (Model.Apellido?.Substring(0, 1) ?? "");
}

<div class="container mx-auto px-4 py-8">

    <div class="flex justify-between items-center mb-6">
        <div>
            <h1 class="text-3xl font-bold text-indigo-800">Perfil del Empleado</h1>
            <p class="text-gray-500 mt-1">Información personal y estado de cuenta.</p>
        </div>
        <a asp-action="Index" class="text-gray-600 hover:text-indigo-600 font-medium transition duration-150 flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
            </svg>
            Volver a la lista
        </a>
    </div>

    <div class="bg-white rounded-xl shadow-lg overflow-hidden border border-gray-100">
        
        <div class="bg-gradient-to-r from-blue-600 to-indigo-700 px-8 py-6 flex items-center gap-6">
            <div class="h-20 w-20 bg-white rounded-full flex items-center justify-center text-indigo-700 font-bold text-3xl shadow-inner border-4 border-blue-200">
                @iniciales
            </div>
            <div class="text-white">
                <h2 class="text-2xl font-bold">@Model.Nombre @Model.Apellido</h2>
                <p class="text-blue-100 opacity-90 flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V8a2 2 0 00-2-2h-5m-4 0V5a2 2 0 114 0v1m-4 0a2 2 0 104 0m-5 8a2 2 0 100-4 2 2 0 000 4zm0 0c1.306 0 2.417.835 2.83 2M9 14a3.001 3.001 0 00-2.83 2M15 11h3m-3 4h2" />
                    </svg>
                    Legajo / ID: @Model.Id
                </p>
            </div>
        </div>

        <div class="p-8">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                
                <div class="flex items-start gap-4 p-4 rounded-lg bg-gray-50 border border-gray-100">
                    <div class="p-2 bg-blue-100 text-blue-600 rounded-lg">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V8a2 2 0 00-2-2h-5m-4 0V5a2 2 0 114 0v1m-4 0a2 2 0 104 0m-5 8a2 2 0 100-4 2 2 0 000 4zm0 0c1.306 0 2.417.835 2.83 2M9 14a3.001 3.001 0 00-2.83 2M15 11h3m-3 4h2" />
                        </svg>
                    </div>
                    <div>
                        <p class="text-xs font-bold text-gray-500 uppercase tracking-wide">DNI</p>
                        <p class="text-lg font-semibold text-gray-800">@Model.Dni</p>
                    </div>
                </div>

                <div class="flex items-start gap-4 p-4 rounded-lg bg-gray-50 border border-gray-100">
                    <div class="p-2 bg-purple-100 text-purple-600 rounded-lg">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                        </svg>
                    </div>
                    <div>
                        <p class="text-xs font-bold text-gray-500 uppercase tracking-wide">Teléfono</p>
                        <p class="text-lg font-semibold text-gray-800">@Model.Telefono</p>
                    </div>
                </div>

                <div class="flex items-start gap-4 p-4 rounded-lg bg-gray-50 border border-gray-100">
                    <div class="p-2 @(Model.UsuarioId != null ? "bg-green-100 text-green-600" : "bg-gray-200 text-gray-500") rounded-lg">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.121 17.804A13.937 13.937 0 0112 16c2.5 0 4.847.655 6.879 1.804M15 10a3 3 0 11-6 0 3 3 0 016 0zm6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </div>
                    <div>
                        <p class="text-xs font-bold text-gray-500 uppercase tracking-wide">Acceso al Sistema</p>
                        @if (Model.UsuarioId != null)
                        {
                            <p class="text-lg font-semibold text-green-700 flex items-center gap-1">
                                Activo
                                <span class="text-xs bg-green-100 text-green-800 px-2 py-0.5 rounded-full border border-green-200">ID Usuario: @Model.UsuarioId</span>
                            </p>
                        }
                        else
                        {
                            <p class="text-lg font-semibold text-gray-500 italic">Sin usuario asignado</p>
                        }
                    </div>
                </div>

                <div class="md:col-span-2 lg:col-span-3 border-t border-gray-100 pt-6 mt-2 flex flex-col md:flex-row gap-8 text-sm text-gray-500">
                    <div class="flex items-center gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                        Creado el: <span class="font-medium text-gray-700">@(Model.Created_at.HasValue ? Model.Created_at.Value.ToString("dd/MM/yyyy HH:mm") : "-")</span>
                    </div>
                    <div class="flex items-center gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                        </svg>
                        Última actualización: <span class="font-medium text-gray-700">@(Model.Updated_at.HasValue ? Model.Updated_at.Value.ToString("dd/MM/yyyy HH:mm") : "-")</span>
                    </div>
                </div>

            </div>
        </div>

        <div class="bg-gray-50 px-8 py-4 border-t border-gray-100 flex justify-end gap-3">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="bg-amber-500 hover:bg-amber-600 text-white font-bold py-2 px-6 rounded-lg shadow transition duration-150 ease-in-out flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
                </svg>
                Editar Empleado
            </a>
        </div>
    </div>
</div>