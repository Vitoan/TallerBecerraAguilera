@model TallerBecerraAguilera.Models.Empleados
@{ ViewData["Title"] = "Editar Empleado"; }

<div class="container mx-auto px-4 py-8">
    <div class="mb-8 flex items-center gap-4">
        <div class="p-3 bg-indigo-100 rounded-full text-indigo-600">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
            </svg>
        </div>
        <div>
            <h1 class="text-3xl font-bold text-indigo-800">Editar Empleado</h1>
            <p class="text-gray-500 mt-1">Modifica los datos del empleado.</p>
        </div>
    </div>

    <div class="bg-white rounded-xl shadow-lg border border-gray-100 overflow-hidden">
        <div class="h-2 bg-gradient-to-r from-indigo-500 to-purple-600"></div>
        <div class="p-8">
            <form asp-action="Edit" method="post" class="space-y-6">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="Created_at" />
                <div asp-validation-summary="ModelOnly" class="bg-red-50 text-red-600 p-4 rounded-lg mb-6 border border-red-200 text-sm"></div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    <div>
                        <label asp-for="Nombre" class="block text-sm font-bold text-gray-700 mb-2 uppercase tracking-wide">Nombre</label>
                        <input asp-for="Nombre" class="w-full px-4 py-3 rounded-lg bg-gray-50 border border-gray-300 focus:border-indigo-500 focus:bg-white focus:ring-2 focus:ring-indigo-200 transition duration-200" />
                        <span asp-validation-for="Nombre" class="text-red-500 text-xs mt-1"></span>
                    </div>
                     <div>
                        <label asp-for="Apellido" class="block text-sm font-bold text-gray-700 mb-2 uppercase tracking-wide">Apellido</label>
                        <input asp-for="Apellido" class="w-full px-4 py-3 rounded-lg bg-gray-50 border border-gray-300 focus:border-indigo-500 focus:bg-white focus:ring-2 focus:ring-indigo-200 transition duration-200" />
                        <span asp-validation-for="Apellido" class="text-red-500 text-xs mt-1"></span>
                    </div>
                     <div>
                        <label asp-for="Dni" class="block text-sm font-bold text-gray-700 mb-2 uppercase tracking-wide">Dni</label>
                        <input asp-for="Dni" class="w-full px-4 py-3 rounded-lg bg-gray-50 border border-gray-300 focus:border-indigo-500 focus:bg-white focus:ring-2 focus:ring-indigo-200 transition duration-200" />
                        <span asp-validation-for="Dni" class="text-red-500 text-xs mt-1"></span>
                    </div>
                     <div>
                        <label asp-for="Telefono" class="block text-sm font-bold text-gray-700 mb-2 uppercase tracking-wide">Telefono</label>
                        <input asp-for="Telefono" class="w-full px-4 py-3 rounded-lg bg-gray-50 border border-gray-300 focus:border-indigo-500 focus:bg-white focus:ring-2 focus:ring-indigo-200 transition duration-200" />
                        <span asp-validation-for="Telefono" class="text-red-500 text-xs mt-1"></span>
                    </div>
                </div>

                <div class="flex items-center justify-end gap-4 mt-8 pt-6 border-t border-gray-100">
                    <a asp-action="Index" class="text-gray-600 hover:text-indigo-600 font-medium px-4 py-2 rounded-lg hover:bg-gray-50 transition duration-150">Cancelar</a>
                    <button type="submit" class="bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 px-8 rounded-lg shadow-lg hover:shadow-xl transition duration-150 ease-in-out transform hover:-translate-y-0.5 flex items-center gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
                        Guardar Cambios
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts { @{await Html.RenderPartialAsync("_ValidationScriptsPartial");} }