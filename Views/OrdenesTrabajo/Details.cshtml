@model TallerBecerraAguilera.Models.OrdenesTrabajo

@{
    ViewData["Title"] = $"OT #{Model.Id}";
}

<div class="max-w-5xl mx-auto">
    
    <div class="mb-6 flex flex-col md:flex-row md:items-center justify-between gap-4">
        <div>
            <div class="flex items-center gap-3">
                <h2 class="text-3xl font-bold text-gray-800">Orden #@Model.Id</h2>
                <span class="px-3 py-1 rounded-full text-xs font-bold uppercase tracking-wide border @GetStatusClasses(Model.Estado)">
                    @Model.Estado
                </span>
            </div>
            <p class="text-sm text-gray-500 mt-1">Ficha técnica del servicio</p>
        </div>
        
        <div class="flex gap-3">
            <a asp-action="Index" class="bg-white border border-gray-200 text-gray-600 hover:bg-gray-50 px-4 py-2 rounded-xl text-sm font-medium transition shadow-sm flex items-center gap-2">
                <i class="bi bi-arrow-left"></i> Volver
            </a>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="bg-amber-500 hover:bg-amber-600 text-white px-4 py-2 rounded-xl text-sm font-medium transition shadow-sm flex items-center gap-2">
                <i class="bi bi-pencil-square"></i> Editar
            </a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="bg-red-50 text-red-500 hover:bg-red-100 border border-red-100 px-4 py-2 rounded-xl text-sm font-medium transition shadow-sm flex items-center gap-2">
                <i class="bi bi-trash"></i>
            </a>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        
        <div class="lg:col-span-1 space-y-6">
            
            <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6 relative overflow-hidden">
                <div class="absolute top-0 right-0 p-4 opacity-10">
                    <i class="bi bi-car-front-fill text-6xl text-primary"></i>
                </div>
                
                <h3 class="text-xs font-bold text-gray-400 uppercase tracking-wider mb-4">Vehículo</h3>
                
                <div class="text-center mb-4">
                    <div class="w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center text-primary text-2xl mx-auto mb-2">
                        <i class="bi bi-car-front"></i>
                    </div>
                    <h4 class="text-xl font-bold text-gray-800">@Model.Vehiculo?.patente</h4>
                    <p class="text-sm text-gray-500">@Model.Vehiculo?.marca @Model.Vehiculo?.modelo</p>
                </div>

                <div class="border-t border-gray-100 pt-4 mt-4">
                    <div class="flex justify-between items-center mb-2">
                        <span class="text-xs text-gray-400">Año</span>
                        <span class="text-sm font-medium text-gray-700">@(Model.Vehiculo?.anio.ToString() ?? "-")</span>
                    </div>
                     <div class="flex justify-between items-center">
                        <span class="text-sm font-medium text-gray-700">@Model.Vehiculo?.kilometraje km</span>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6">
                <h3 class="text-xs font-bold text-gray-400 uppercase tracking-wider mb-4">Cliente</h3>
                <div class="flex items-center gap-3">
                    <div class="w-10 h-10 rounded-full bg-gray-100 flex items-center justify-center text-gray-500">
                        <i class="bi bi-person-fill"></i>
                    </div>
                    <div>
                        <p class="text-sm font-bold text-gray-800">@Model.Vehiculo?.Cliente?.NombreCompleto</p>
                        <p class="text-xs text-gray-500">@Model.Vehiculo?.Cliente?.Email</p>
                        <p class="text-xs text-gray-500">Tel: @Model.Vehiculo?.Cliente?.Telefono</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="lg:col-span-2 space-y-6">
            
            <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6">
                <h3 class="text-xs font-bold text-primary uppercase tracking-wider mb-4 border-b border-gray-100 pb-2">Detalles del Servicio</h3>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                    <div>
                        <span class="text-xs text-gray-400 block mb-1">Mecánico Responsable</span>
                        <div class="flex items-center gap-2">
                            <i class="bi bi-tools text-primary"></i>
                            <span class="text-sm font-medium text-gray-800">@Model.Empleado?.Nombre @Model.Empleado?.Apellido</span>
                        </div>
                    </div>
                    <div>
                         <span class="text-xs text-gray-400 block mb-1">Horas Estimadas</span>
                        <div class="flex items-center gap-2">
                            <i class="bi bi-clock text-primary"></i>
                            <span class="text-sm font-medium text-gray-800">@Model.HorasEstimadas hrs</span>
                        </div>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                    <div class="bg-gray-50 p-3 rounded-lg border border-gray-100">
                        <span class="text-xs text-gray-400 block mb-1">Fecha Ingreso</span>
                        <span class="text-sm font-bold text-gray-800">@Model.FechaIngreso.ToString("dd/MM/yyyy")</span>
                    </div>
                    <div class="bg-gray-50 p-3 rounded-lg border border-gray-100">
                        <span class="text-xs text-gray-400 block mb-1">Fecha Estimada Entrega</span>
                        <span class="text-sm font-bold text-gray-800">
                            @(Model.FechaEstimadaEntrega.HasValue ? Model.FechaEstimadaEntrega.Value.ToString("dd/MM/yyyy") : "Sin definir")
                        </span>
                    </div>
                </div>

                <div>
                    <span class="text-xs text-gray-400 block mb-2">Descripción de la Falla / Trabajo</span>
                    <div class="bg-gray-50 p-4 rounded-xl border border-gray-100 text-sm text-gray-700 leading-relaxed italic">
                        "@Model.DescripcionFalla"
                    </div>
                </div>
            </div>
            
            <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6 flex items-center justify-between opacity-75">
                <div>
                     <h3 class="text-sm font-bold text-gray-800">Historial de Cambios</h3>
                     <p class="text-xs text-gray-500">Registro de auditoría</p>
                </div>
                <div class="text-right">
                     <p class="text-xs text-gray-400">Creado el</p>
                     <p class="text-xs font-bold text-gray-600">
                         @(Model.Created_at.HasValue ? Model.Created_at.Value.ToString("dd/MM/yyyy HH:mm") : "-")
                     </p>
                </div>
            </div>

        </div>
    </div>
</div>

@functions {
    public string GetStatusClasses(TallerBecerraAguilera.Models.EstadoOrden estado)
    {
        return estado switch
        {
            TallerBecerraAguilera.Models.EstadoOrden.Pendiente => "bg-gray-100 text-gray-600 border-gray-200",
            TallerBecerraAguilera.Models.EstadoOrden.EnReparacion => "bg-blue-50 text-blue-600 border-blue-200",
            TallerBecerraAguilera.Models.EstadoOrden.Finalizada => "bg-amber-50 text-amber-600 border-amber-200",
            TallerBecerraAguilera.Models.EstadoOrden.Entregada => "bg-emerald-50 text-emerald-600 border-emerald-200",
            _ => "bg-gray-50 text-gray-500"
        };
    }
}