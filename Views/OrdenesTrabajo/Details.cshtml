@model TallerBecerraAguilera.Models.PedidosRepuestos
@using TallerBecerraAguilera.Models

@{
    ViewData["Title"] = "Detalle del Pedido #" + Model.Id;
    bool puedeEditar = Model.Estado == EstadoPedido.Pendiente;
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold">Detalle del Pedido #@Model.Id</h2>
    <span class="badge bg-@(Model.Estado == EstadoPedido.Pendiente ? "warning" : "success") fs-5">
        @Model.Estado
    </span>
</div>

<div class="card shadow-sm mb-4">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">Información General</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4"><strong>Proveedor:</strong> @(Model.Proveedor?.Nombre ?? "N/A")</div>
            <div class="col-md-4"><strong>Fecha:</strong> @Model.Fecha.ToString("dd/MM/yyyy")</div>
            <div class="col-md-4"><strong>Empleado:</strong> @(Model.Empleado?.NombreCompleto ?? "N/A")</div>
        </div>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-secondary text-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Repuestos Solicitados</h5>
        @if (puedeEditar)
        {
            <a asp-controller="PedidoRepuestos" asp-action="Create" asp-route-pedidoId="@Model.Id" class="btn btn-light btn-sm">
                Agregar Repuesto
            </a>
        }
    </div>

    <div class="card-body p-0">
        <table class="table table-striped mb-0">
            <thead class="table-dark">
                <tr>
                    <th>Repuesto</th>
                    <th class="text-center">Cant. Solicitada</th>
                    <th class="text-center">Cant. Recibida</th>
                    <th class="text-end">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Detalles != null && Model.Detalles.Any())
                {
                    foreach (var item in Model.Detalles)
                    {
                        <tr>
                            <td>
                                <strong>@item.Repuesto?.descripcion</strong><br>
                                <small class="text-muted">Cód: @item.Repuesto?.codigo</small>
                            </td>
                            <td class="text-center align-middle">@item.cantidad_solicitada</td>
                            <td class="text-center align-middle">
                                @if (Model.Estado == EstadoPedido.Recibido)
                                {
                                    <span class="badge bg-success">@item.cantidad_recibida</span>
                                }
                                else
                                {
                                    <span class="text-muted">—</span>
                                }
                            </td>
                            <td class="text-end align-middle">
                                @if (puedeEditar)
                                {
                                    <form action="/PedidoRepuestos/Delete" method="post">
                                        <input name="pedidoId" value="@Model.Id" />
                                        <input name="repuestoId" value="@item.repuesto_id" />
                                        <button type="submit">Eliminar</button>
                                    </form>

                                }
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center py-5 text-muted">
                            <em>No hay repuestos en este pedido aún.</em>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Index" class="btn btn-secondary">Volver al listado</a>
</div>