@model TallerBecerraAguilera.Models.OrdenesTrabajo

@{
    ViewData["Title"] = "Crear Nueva Orden de Trabajo";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">@ViewData["Title"]</h1>
</div>

<div class="card shadow mb-4">
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="VehiculoId" class="control-label"></label>
                        <select asp-for="VehiculoId" class="form-control" asp-items="ViewBag.VehiculoId">
                            <option value="">-- Seleccione Veh√≠culo --</option>
                        </select>
                        <span asp-validation-for="VehiculoId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="EmpleadoId" class="control-label"></label>
                        <select asp-for="EmpleadoId" class="form-control" asp-items="ViewBag.EmpleadoId">
                            <option value="">-- Asignar Empleado --</option>
                        </select>
                        <span asp-validation-for="EmpleadoId" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <hr/>

            <div class="row">
                <div class="col-md-4">
                    <div class="form-group mb-3">
                        <label asp-for="FechaIngreso" class="control-label"></label>
                        <input asp-for="FechaIngreso" type="date" class="form-control" />
                        <span asp-validation-for="FechaIngreso" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group mb-3">
                        <label asp-for="FechaEstimadaEntrega" class="control-label"></label>
                        <input asp-for="FechaEstimadaEntrega" type="date" class="form-control" />
                        <span asp-validation-for="FechaEstimadaEntrega" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group mb-3">
                        <label asp-for="Estado" class="control-label"></label>
                        <select asp-for="Estado" class="form-control" asp-items="Html.GetEnumSelectList<TallerBecerraAguilera.Models.EstadoOrden>()"></select>
                        <span asp-validation-for="Estado" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DescripcionFalla" class="control-label"></label>
                <textarea asp-for="DescripcionFalla" class="form-control" rows="4"></textarea>
                <span asp-validation-for="DescripcionFalla" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-4">
                <label asp-for="HorasEstimadas" class="control-label"></label>
                <input asp-for="HorasEstimadas" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="HorasEstimadas" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save"></i> Crear OT
                </button>
                <a asp-action="Index" class="btn btn-secondary ms-2">
                    <i class="fas fa-arrow-left"></i> Volver a la Lista
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}