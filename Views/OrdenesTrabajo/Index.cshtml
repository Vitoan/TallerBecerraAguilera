@using TallerBecerraAguilera.Helpers 
@model PaginatedList<TallerBecerraAguilera.Models.OrdenesTrabajo>

@{
    ViewData["Title"] = "Ã“rdenes de Trabajo";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">ðŸ“‹ Listado de Ã“rdenes de Trabajo</h1>
    <a asp-action="Create" class="btn btn-primary btn-icon-split">
        <span class="text">Crear Nueva OT</span>
    </a>
</div>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Mensaje"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>OT #</th>
                        <th>VehÃ­culo</th>
                        <th>Empleado</th>
                        <th>Fecha Ingreso</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Vehiculo?.Patente <small class="text-muted">(@item.Vehiculo?.Cliente?.NombreCompleto)</small></td>
                        <td>@item.Empleado?.Nombre @item.Empleado?.Apellido</td>
                        <td>@item.FechaIngreso.ToString("dd/MM/yyyy")</td>
                        <td>
                            <span class="badge @GetBadgeClass(item.Estado)">
                                @item.Estado
                            </span>
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Editar">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info ms-1" title="Detalles">
                                <i class="bi bi-info-circle"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger ms-1" title="Eliminar">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
        
        <div class="d-flex justify-content-between align-items-center mt-3">
            <div>
                PÃ¡gina @Model.PageIndex de @Model.TotalPages
            </div>
            <div>
                <a asp-action="Index"
                   asp-route-pageNumber="@(Model.PageIndex - 1)"
                   class="btn btn-outline-primary @(!Model.HasPreviousPage ? "disabled" : "")">
                   <i class="bi bi-arrow-left"></i> Anterior
                </a>
                
                <a asp-action="Index"
                   asp-route-pageNumber="@(Model.PageIndex + 1)"
                   class="btn btn-outline-primary @(!Model.HasNextPage ? "disabled" : "")">
                   Siguiente <i class="bi bi-arrow-right"></i>
                </a>
            </div>
        </div>
        
    </div>
</div>

@functions {
    public string GetBadgeClass(TallerBecerraAguilera.Models.EstadoOrden estado)
    {
        return estado switch
        {
            TallerBecerraAguilera.Models.EstadoOrden.Pendiente => "bg-secondary",
            TallerBecerraAguilera.Models.EstadoOrden.EnReparacion => "bg-primary",
            TallerBecerraAguilera.Models.EstadoOrden.Finalizada => "bg-warning text-dark",
            TallerBecerraAguilera.Models.EstadoOrden.Entregada => "bg-success",
            _ => "bg-light text-dark",
        };
    }
}