@using TallerBecerraAguilera.Helpers
@using TallerBecerraAguilera.Models
@model PaginatedList<OrdenesTrabajo>

@{
    ViewData["Title"] = "√ìrdenes de Trabajo";
}

<!-- üßæ HEADER -->
<div class="flex flex-col md:flex-row md:items-center justify-between mb-6 gap-4">
    <div>
        <h2 class="text-2xl font-bold text-gray-800">√ìrdenes de Trabajo</h2>
        <p class="text-sm text-gray-500">Gesti√≥n y seguimiento de reparaciones</p>
    </div>
    <a asp-action="Create"
       class="bg-primary hover:bg-primaryDark text-white px-5 py-2.5 rounded-xl shadow-sm font-medium transition
              flex items-center gap-2 w-full md:w-auto justify-center">
        <i class="bi bi-plus-lg text-lg"></i>
        <span>Nueva Orden</span>
    </a>
</div>

<!-- üîç FILTROS -->
<div class="bg-white rounded-2xl shadow-sm border border-gray-100 mb-6">
    <div class="bg-gray-50 px-6 py-4 border-b border-gray-100">
        <form method="get" class="grid grid-cols-1 md:grid-cols-12 gap-4 items-end">

            <!-- ESTADO -->
            <div class="md:col-span-3">
                <label class="block text-xs font-semibold text-gray-500 uppercase mb-1">
                    Estado
                </label>
                <select name="estado"
                        class="w-full rounded-lg border-gray-300 shadow-sm text-sm">
                    <option value="">-- Todas --</option>
                    @foreach (EstadoOrden estado in Enum.GetValues(typeof(EstadoOrden)))
                    {
                        <option value="@estado"
                                selected="@(ViewBag.EstadoSeleccionado?.ToString() == estado.ToString())">
                            @estado
                        </option>
                    }
                </select>
            </div>

            <!-- EMPLEADO -->
            <div class="md:col-span-3">
                <label class="block text-xs font-semibold text-gray-500 uppercase mb-1">
                    Empleado
                </label>
                <input type="text"
                       name="empleado"
                       value="@ViewBag.Empleado"
                       placeholder="Nombre o apellido"
                       class="w-full rounded-lg border-gray-300 shadow-sm text-sm" />
            </div>

            <!-- PATENTE -->
            <div class="md:col-span-2">
                <label class="block text-xs font-semibold text-gray-500 uppercase mb-1">
                    Patente
                </label>
                <input type="text"
                       name="patente"
                       value="@ViewBag.Patente"
                       class="w-full rounded-lg border-gray-300 shadow-sm text-sm" />
            </div>

            <!-- FECHA DESDE -->
            <div class="md:col-span-2">
                <label class="block text-xs font-semibold text-gray-500 uppercase mb-1">
                    Desde
                </label>
                <input type="date"
                       name="fechaDesde"
                       value="@ViewBag.FechaDesde"
                       class="w-full rounded-lg border-gray-300 shadow-sm text-sm" />
            </div>

            <!-- FECHA HASTA -->
            <div class="md:col-span-2">
                <label class="block text-xs font-semibold text-gray-500 uppercase mb-1">
                    Hasta
                </label>
                <input type="date"
                       name="fechaHasta"
                       value="@ViewBag.FechaHasta"
                       class="w-full rounded-lg border-gray-300 shadow-sm text-sm" />
            </div>

            <!-- BOTONES -->
            <div class="md:col-span-12 flex gap-2">
                <button type="submit"
                        class="bg-primary hover:bg-primaryDark text-white px-6 py-2 rounded-lg text-sm font-medium transition">
                    Filtrar
                </button>
                <a asp-action="Index"
                   class="bg-white border border-gray-300 text-gray-700 px-6 py-2 rounded-lg text-sm font-medium hover:bg-gray-50 transition">
                    Limpiar
                </a>
            </div>

        </form>
    </div>
</div>

<!-- üìã TABLA -->
<div class="bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden">
    <div class="overflow-x-auto">
        <table class="w-full text-left border-collapse">
            <thead>
                <tr class="bg-gray-50 border-b border-gray-100 text-xs font-semibold text-gray-500 uppercase tracking-wider">
                    <th class="px-6 py-4">OT #</th>
                    <th class="px-6 py-4">Veh√≠culo / Cliente</th>
                    <th class="px-6 py-4">Empleado</th>
                    <th class="px-6 py-4">Fecha</th>
                    <th class="px-6 py-4 text-center">Estado</th>
                    <th class="px-6 py-4 text-right">Acciones</th>
                </tr>
            </thead>

            <tbody class="divide-y divide-gray-50">
                @foreach (var item in Model)
                {
                    <tr class="hover:bg-gray-50/50 transition group">
                        <td class="px-6 py-4 font-mono text-sm text-primary font-bold">
                            #@item.Id
                        </td>

                        <td class="px-6 py-4">
                            <div class="flex flex-col">
                                <span class="font-bold text-gray-800 text-sm">@item.Vehiculo?.patente</span>
                                <span class="text-xs text-gray-500">@item.Vehiculo?.Cliente?.NombreCompleto</span>
                            </div>
                        </td>

                        <td class="px-6 py-4 text-sm text-gray-700">
                            @(item.Empleado != null
                                ? $"{item.Empleado.Nombre} {item.Empleado.Apellido}"
                                : "‚Äî")
                        </td>

                        <td class="px-6 py-4 text-sm text-gray-600">
                            @item.FechaIngreso.ToString("dd/MM/yyyy")
                        </td>

                        <td class="px-6 py-4 text-center">
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                                  @GetBadgeClass(item.Estado)">
                                @GetStatusIcon(item.Estado)
                                @item.Estado
                            </span>
                        </td>

                        <!-- üëá ACCIONES COMO ANTES -->
                        <td class="px-6 py-4 text-right">
                            <div class="flex justify-end gap-2 opacity-0 group-hover:opacity-100 transition">
                                <a asp-action="Edit" asp-route-id="@item.Id"
                                   class="w-8 h-8 flex items-center justify-center rounded-lg
                                          bg-orange-50 text-orange-500 hover:bg-orange-100">
                                    <i class="bi bi-pencil-fill text-sm"></i>
                                </a>

                                <a asp-action="Details" asp-route-id="@item.Id"
                                   class="w-8 h-8 flex items-center justify-center rounded-lg
                                          bg-blue-50 text-blue-500 hover:bg-blue-100">
                                    <i class="bi bi-eye-fill text-sm"></i>
                                </a>

                                <a asp-action="Delete" asp-route-id="@item.Id"
                                   class="w-8 h-8 flex items-center justify-center rounded-lg
                                          bg-red-50 text-red-500 hover:bg-red-100">
                                    <i class="bi bi-trash-fill text-sm"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- ‚è≠ PAGINACI√ìN -->
    <div class="px-6 py-4 bg-gray-50 border-t border-gray-100 flex justify-between items-center">
        <span class="text-sm text-gray-500">
            P√°gina <strong>@Model.PageIndex</strong> de @Model.TotalPages
        </span>

        <div class="flex gap-2">
            <a asp-action="Index"
               asp-route-pageNumber="@(Model.PageIndex - 1)"
               asp-route-estado="@ViewBag.EstadoSeleccionado"
               asp-route-empleado="@ViewBag.Empleado"
               asp-route-patente="@ViewBag.Patente"
               asp-route-fechaDesde="@ViewBag.FechaDesde"
               asp-route-fechaHasta="@ViewBag.FechaHasta"
               class="px-3 py-1 text-sm rounded-md border bg-white
                      @(!Model.HasPreviousPage ? "pointer-events-none opacity-50" : "")">
                Anterior
            </a>

            <a asp-action="Index"
               asp-route-pageNumber="@(Model.PageIndex + 1)"
               asp-route-estado="@ViewBag.EstadoSeleccionado"
               asp-route-empleado="@ViewBag.Empleado"
               asp-route-patente="@ViewBag.Patente"
               asp-route-fechaDesde="@ViewBag.FechaDesde"
               asp-route-fechaHasta="@ViewBag.FechaHasta"
               class="px-3 py-1 text-sm rounded-md border bg-white
                      @(!Model.HasNextPage ? "pointer-events-none opacity-50" : "")">
                Siguiente
            </a>
        </div>
    </div>
</div>

@functions {
    public string GetBadgeClass(EstadoOrden estado)
    {
        return estado switch
        {
            EstadoOrden.Pendiente => "bg-gray-100 text-gray-600",
            EstadoOrden.EnReparacion => "bg-indigo-100 text-primary",
            EstadoOrden.Finalizada => "bg-amber-100 text-amber-700",
            EstadoOrden.Entregada => "bg-emerald-100 text-emerald-700",
            _ => "bg-gray-100 text-gray-800",
        };
    }

    public Microsoft.AspNetCore.Html.IHtmlContent GetStatusIcon(EstadoOrden estado)
    {
        var icon = estado switch
        {
            EstadoOrden.Pendiente => "bi-hourglass-split",
            EstadoOrden.EnReparacion => "bi-tools",
            EstadoOrden.Finalizada => "bi-check-circle",
            EstadoOrden.Entregada => "bi-box-seam",
            _ => "bi-circle",
        };

        return new Microsoft.AspNetCore.Html.HtmlString(
            $"<i class='bi {icon} mr-1.5'></i>"
        );
    }
}
