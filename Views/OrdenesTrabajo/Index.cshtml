@model List<TallerBecerraAguilera.Models.OrdenesTrabajo>
@using TallerBecerraAguilera.Models

@{
    ViewData["Title"] = "Ã“rdenes de Trabajo";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">ðŸ“‹ Listado de Ã“rdenes de Trabajo</h1>
    <a asp-action="Create" class="btn btn-primary btn-icon-split">
        <span class="text">Crear Nueva OT</span>
    </a>
</div>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Mensaje"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.First().Id)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Vehiculo)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Empleado)</th>
                        <th>@Html.DisplayNameFor(model => model.First().FechaIngreso)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Estado)</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
@foreach (var item in Model)
{
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Vehiculo?.Patente <small class="text-muted">(@item.Vehiculo?.Cliente?.NombreCompleto)</small></td>
                        <td>@item.Empleado?.Nombre @item.Empleado?.Apellido</td>
                        <td>@item.FechaIngreso.ToString("dd/MM/yyyy")</td>
                        <td>
                            <span class="badge @GetBadgeClass(item.Estado)">
                                @item.Estado
                            </span>
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Editar">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info ms-1" title="Detalles">
                                <i class="bi bi-info-circle"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger ms-1" title="Eliminar">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
}
                </tbody>
            </table>
        </div>
    </div>
</div>

@functions {
    // Helper para asignar clases de Bootstrap segÃºn el estado
    public string GetBadgeClass(EstadoOrden estado)
    {
        return estado switch
        {
            EstadoOrden.Pendiente => "bg-secondary",
            EstadoOrden.EnReparacion => "bg-primary",
            EstadoOrden.Finalizada => "bg-warning text-dark",
            EstadoOrden.Entregada => "bg-success",
            _ => "bg-light text-dark",
        };
    }
}