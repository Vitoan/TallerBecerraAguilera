@model TallerBecerraAguilera.Models.OrdenesTrabajo
@using TallerBecerraAguilera.Models

@{
    ViewData["Title"] = $"Eliminar OT #{Model.Id}";
}

<div class="min-h-[80vh] flex items-center justify-center p-4">
    
    <div class="max-w-lg w-full bg-white rounded-2xl shadow-xl border border-red-100 overflow-hidden">
        
        <div class="bg-red-50 p-6 flex items-center gap-4 border-b border-red-100">
            <div class="w-12 h-12 bg-white rounded-full flex items-center justify-center text-red-500 shadow-sm shrink-0">
                <i class="bi bi-exclamation-triangle-fill text-2xl"></i>
            </div>
            <div>
                <h2 class="text-xl font-bold text-red-800">¿Eliminar Orden #@Model.Id?</h2>
                <p class="text-sm text-red-600/80">Esta acción es irreversible.</p>
            </div>
        </div>

        <div class="p-8">
            <p class="text-gray-600 mb-6 text-sm leading-relaxed">
                Estás a punto de eliminar permanentemente la Orden de Trabajo <strong>#@Model.Id</strong>. 
                Esto borrará también el historial de repuestos y herramientas asociados.
            </p>

            <div class="bg-gray-50 rounded-xl p-5 mb-8 space-y-3 border border-gray-100">
                
                <div class="flex justify-between items-center border-b border-gray-200/50 pb-2">
                    <span class="text-xs font-bold text-gray-400 uppercase tracking-wider">Vehículo</span>
                    <span class="text-sm font-medium text-gray-800">@Model.Vehiculo?.patente (@Model.Vehiculo?.marca)</span>
                </div>

                <div class="flex justify-between items-center border-b border-gray-200/50 pb-2">
                    <span class="text-xs font-bold text-gray-400 uppercase tracking-wider">Encargado</span>
                    <span class="text-sm font-medium text-gray-800">@Model.Empleado?.Nombre @Model.Empleado?.Apellido</span>
                </div>

                <div class="flex justify-between items-center pb-1">
                    <span class="text-xs font-bold text-gray-400 uppercase tracking-wider">Fecha Ingreso</span>
                    <span class="text-sm font-medium text-gray-800">@Model.FechaIngreso.ToString("dd/MM/yyyy")</span>
                </div>

                @if(!string.IsNullOrEmpty(Model.DescripcionFalla))
                {
                    <div class="pt-2 mt-2 border-t border-gray-200/50">
                        <span class="text-xs font-bold text-gray-400 uppercase tracking-wider block mb-1">Descripción</span>
                        <p class="text-sm text-gray-600 italic">"@Model.DescripcionFalla"</p>
                    </div>
                }
            </div>

            <form asp-action="Delete" method="post" class="flex flex-col gap-3">
                <input type="hidden" asp-for="Id" />
                
                <button type="submit" class="w-full bg-red-500 hover:bg-red-600 text-white font-bold py-3 rounded-xl shadow-md transition-all hover:shadow-lg flex items-center justify-center gap-2">
                    <i class="bi bi-trash-fill"></i> Sí, Eliminar Definitivamente
                </button>
                
                <a asp-action="Index" class="w-full bg-white border border-gray-200 text-gray-600 hover:bg-gray-50 hover:text-gray-800 font-medium py-3 rounded-xl transition flex items-center justify-center">
                    Cancelar
                </a>
            </form>
        </div>
    </div>
</div>