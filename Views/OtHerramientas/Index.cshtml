@model List<TallerBecerraAguilera.Models.OtHerramientas>

@{
    ViewData["Title"] = "Pedidos de Herramientas";
}

<h3 class="mb-3">ðŸ”§ Pedidos de Herramientas</h3>

@if (!Model.Any())
{
    <div class="alert alert-info">
        No hay pedidos de herramientas registrados.
    </div>
}
else
{
    <table class="table table-bordered table-striped align-middle">
        <thead class="table-light">
            <tr>
                <th>OT</th>
                <th>Herramienta</th>
                <th>Empleado</th>
                <th>Fecha PrÃ©stamo</th>
                <th>Fecha DevoluciÃ³n</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>

        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>#@item.ot_id</td>
                <td>@item.Herramienta?.Nombre</td>
                <td>@item.Empleado?.Nombre @item.Empleado?.Apellido</td>
                <td>@item.fecha_prestamo.ToString("dd/MM/yyyy HH:mm")</td>
                <td>
                    @if (item.fecha_devolucion.HasValue)
                    {
                        @item.fecha_devolucion.Value.ToString("dd/MM/yyyy HH:mm")
                    }
                    else
                    {
                        <span class="badge bg-warning text-dark">Pendiente</span>
                    }
                </td>
                <td class="text-center">
                    @if (User.IsInRole("Administrador"))
                    {
                        <a asp-action="Delete"
                           asp-route-id="@item.id"
                           class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i>
                        </a>
                    }
                </td>
            </tr>
        }
        </tbody>
    </table>
}
