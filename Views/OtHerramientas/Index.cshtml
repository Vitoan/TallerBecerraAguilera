@model List<TallerBecerraAguilera.Models.OtHerramientas>

@{
    ViewData["Title"] = "Pedidos de Herramientas";
}

<div class="container mx-auto px-4 py-8">

    <div class="flex flex-col md:flex-row justify-between items-center mb-6 gap-4">
        <div class="flex items-center gap-4">
            <div class="p-3 bg-indigo-100 rounded-full text-indigo-600">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
                </svg>
            </div>
            <div>
                <h1 class="text-3xl font-bold text-indigo-800">Pedidos de Herramientas</h1>
                <p class="text-gray-500 mt-1">Historial de préstamos y devoluciones por Orden de Trabajo.</p>
            </div>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="bg-blue-50 border-l-4 border-blue-400 p-4 rounded-r shadow-sm flex items-start gap-3">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-500 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <div>
                <h3 class="font-bold text-blue-800">Sin registros</h3>
                <p class="text-blue-700 text-sm">No hay pedidos de herramientas registrados en el sistema actualmente.</p>
            </div>
        </div>
    }
    else
    {
        <div class="bg-white rounded-xl shadow-lg border border-gray-100 overflow-hidden">
            <div class="overflow-x-auto">
                <table class="min-w-full leading-normal">
                    <thead>
                        <tr class="bg-indigo-50 border-b border-indigo-100 text-left">
                            <th class="px-5 py-3 text-xs font-bold text-indigo-600 uppercase tracking-wider">OT Asignada</th>
                            <th class="px-5 py-3 text-xs font-bold text-indigo-600 uppercase tracking-wider">Herramienta</th>
                            <th class="px-5 py-3 text-xs font-bold text-indigo-600 uppercase tracking-wider">Empleado</th>
                            <th class="px-5 py-3 text-xs font-bold text-indigo-600 uppercase tracking-wider">Fecha Préstamo</th>
                            <th class="px-5 py-3 text-xs font-bold text-indigo-600 uppercase tracking-wider">Devolución</th>
                            <th class="px-5 py-3 text-xs font-bold text-indigo-600 uppercase tracking-wider text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="hover:bg-gray-50 transition duration-150 border-b border-gray-200 last:border-b-0">
                                
                                <td class="px-5 py-4 whitespace-nowrap">
                                    <span class="font-mono text-sm font-bold text-indigo-600 bg-indigo-50 px-2 py-1 rounded border border-indigo-100">
                                        #@item.ot_id
                                    </span>
                                </td>

                                <td class="px-5 py-4 whitespace-nowrap">
                                    <div class="text-sm font-bold text-gray-900">@item.Herramienta?.Nombre</div>
                                    <div class="text-xs text-gray-500">Cod: @item.Herramienta?.Codigo</div>
                                </td>

                                <td class="px-5 py-4 whitespace-nowrap">
                                    <div class="flex items-center gap-2">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                                            <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
                                        </svg>
                                        <span class="text-sm text-gray-700">@item.Empleado?.Nombre @item.Empleado?.Apellido</span>
                                    </div>
                                </td>

                                <td class="px-5 py-4 whitespace-nowrap text-sm text-gray-600">
                                    @item.fecha_prestamo.ToString("dd/MM/yyyy HH:mm")
                                </td>

                                <td class="px-5 py-4 whitespace-nowrap">
                                    @if (item.fecha_devolucion.HasValue)
                                    {
                                        <div class="flex items-center gap-1 text-green-600 text-sm font-medium">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                                            </svg>
                                            @item.fecha_devolucion.Value.ToString("dd/MM/yyyy HH:mm")
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="px-2 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800 border border-yellow-200 animate-pulse">
                                            Pendiente
                                        </span>
                                    }
                                </td>

                                <td class="px-5 py-4 whitespace-nowrap text-center">
                                    @if (User.IsInRole("Administrador"))
                                    {
                                        <a asp-action="Delete" asp-route-id="@item.id" class="text-red-500 hover:text-red-700 p-2 hover:bg-red-50 rounded-full transition duration-150 inline-block" title="Eliminar Registro">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                                                <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
                                            </svg>
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-gray-300">-</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>