@model List<TallerBecerraAguilera.Models.OtHerramientas>

@{
    ViewData["Title"] = "Pedidos de Herramientas";
}

<div class="container mx-auto px-4 py-8">

    <div class="flex flex-col md:flex-row justify-between items-center mb-8 gap-4">
        <div class="flex items-center gap-4">
            <div class="p-3 bg-indigo-100 rounded-full text-indigo-600 shadow-sm">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
                </svg>
            </div>
            <div>
                <h1 class="text-3xl font-bold text-indigo-800">Historial de Pedidos</h1>
                <p class="text-gray-500 mt-1">Control de pr√©stamos y devoluciones de herramientas.</p>
            </div>
        </div>
    </div>

    <!-- üîç FILTRO POR EMPLEADO -->
    <div class="bg-white rounded-2xl shadow-sm border border-gray-100 mb-6 px-6 py-4">
        <form method="get" class="flex flex-col md:flex-row gap-4 items-end">

            <div class="flex-1">
                <label class="block text-xs font-semibold text-gray-500 uppercase mb-1">
                    Filtrar por empleado
                </label>
                <input type="text" name="empleado" value="@ViewBag.EmpleadoSeleccionado"
                       class="w-full rounded-lg border-gray-300 shadow-sm focus:ring-primary focus:border-primary text-sm"
                       placeholder="Nombre o Apellido del empleado">
            </div>

            <div>
                <button type="submit"
                        class="w-full bg-primary hover:bg-primaryDark text-white py-2 rounded-lg text-sm font-medium transition">
                    Filtrar
                </button>
            </div>

            <div>
                <a asp-action="Index"
                   class="w-full inline-flex justify-center bg-white border border-gray-300
                          text-gray-700 py-2 rounded-lg text-sm font-medium hover:bg-gray-50 transition">
                    Limpiar
                </a>
            </div>

        </form>
    </div>

    @if (!Model.Any())
    {
        <div class="bg-gray-50 border-2 border-dashed border-gray-300 rounded-xl p-12 text-center flex flex-col items-center justify-center">
            <div class="bg-gray-100 p-4 rounded-full mb-3">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-700">Sin movimientos registrados</h3>
            <p class="text-gray-500 mt-1 max-w-sm">
                A√∫n no hay herramientas prestadas ni devoluciones en el sistema.
            </p>
        </div>
    }
    else
    {
        <div class="bg-white rounded-xl shadow-lg border border-gray-100 overflow-hidden">
            <div class="overflow-x-auto">
                <table class="min-w-full leading-normal">
                    <thead>
                        <tr class="bg-indigo-50 border-b border-indigo-100 text-left">
                            <th class="px-5 py-3 text-xs font-bold text-indigo-600 uppercase tracking-wider">OT Vinculada</th>
                            <th class="px-5 py-3 text-xs font-bold text-indigo-600 uppercase tracking-wider">Herramienta</th>
                            <th class="px-5 py-3 text-xs font-bold text-indigo-600 uppercase tracking-wider">Empleado</th>
                            <th class="px-5 py-3 text-xs font-bold text-indigo-600 uppercase tracking-wider">Fecha Pr√©stamo</th>
                            <th class="px-5 py-3 text-xs font-bold text-indigo-600 uppercase tracking-wider">Devoluci√≥n</th>
                            <th class="px-5 py-3 text-xs font-bold text-indigo-600 uppercase tracking-wider text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="hover:bg-gray-50 transition duration-150 border-b border-gray-100 last:border-b-0">
                                
                                <td class="px-5 py-4 whitespace-nowrap">
                                    <span class="inline-flex items-center px-2.5 py-1 rounded-md text-xs font-mono font-bold bg-indigo-100 text-indigo-700 border border-indigo-200">
                                        OT #@item.ot_id
                                    </span>
                                </td>

                                <td class="px-5 py-4 whitespace-nowrap">
                                    <div class="flex flex-col">
                                        <span class="text-sm font-bold text-gray-900">@item.Herramienta?.Nombre</span>
                                        <span class="text-xs text-gray-500 font-mono">C√≥d: @item.Herramienta?.Codigo</span>
                                    </div>
                                </td>

                                <td class="px-5 py-4 whitespace-nowrap">
                                    <div class="flex items-center gap-2">
                                        <div class="w-6 h-6 rounded-full bg-gray-200 flex items-center justify-center text-gray-500 text-xs font-bold">
                                            @(item.Empleado?.Nombre?.Substring(0,1) ?? "?")
                                        </div>
                                        <span class="text-sm text-gray-700 font-medium">
                                            @item.Empleado?.Nombre @item.Empleado?.Apellido
                                        </span>
                                    </div>
                                </td>

                                <td class="px-5 py-4 whitespace-nowrap">
                                    <div class="flex items-center gap-1.5 text-sm text-gray-600">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                                            <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
                                        </svg>
                                        @item.fecha_prestamo.ToString("dd/MM/yyyy")
                                    </div>
                                    <span class="text-xs text-gray-400 pl-6">@item.fecha_prestamo.ToString("HH:mm") hs</span>
                                </td>

                                <td class="px-5 py-4 whitespace-nowrap">
                                    @if (item.fecha_devolucion.HasValue)
                                    {
                                        <div class="flex flex-col">
                                            <div class="flex items-center gap-1.5 text-green-700 text-sm font-medium">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                                                </svg>
                                                Devuelto
                                            </div>
                                            <span class="text-xs text-gray-400 pl-6">
                                                @item.fecha_devolucion.Value.ToString("dd/MM/yyyy")
                                            </span>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="px-2.5 py-1 inline-flex text-xs leading-4 font-bold rounded-full bg-amber-100 text-amber-700 border border-amber-200 animate-pulse">
                                            Pendiente
                                        </span>
                                    }
                                </td>

                                <td class="px-5 py-4 whitespace-nowrap text-center">
                                    @if (User.IsInRole("Administrador"))
                                    {
                                        <a asp-action="Delete" asp-route-id="@item.id" class="inline-block text-gray-400 hover:text-red-500 hover:bg-red-50 p-2 rounded-lg transition duration-200" title="Eliminar Registro">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                                                <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
                                            </svg>
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-gray-200 text-2xl">‚Ä¢</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>
