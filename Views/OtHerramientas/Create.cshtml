@model TallerBecerraAguilera.Models.OtHerramientas

@{
    ViewData["Title"] = "Solicitar Herramienta";

    // Recuperamos la herramienta y la lista de OTs
    var herramienta = ViewBag.Herramienta as TallerBecerraAguilera.Models.Herramientas;
    var ots = ViewBag.OTs as List<TallerBecerraAguilera.Models.OrdenesTrabajo> ?? new List<TallerBecerraAguilera.Models.OrdenesTrabajo>();
}

<div class="container mx-auto px-4 py-8">

    <div class="mb-8 flex items-center gap-4">
        <div class="p-3 bg-indigo-100 rounded-full text-indigo-600">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 11.5V14m0-2.5v-6a1.5 1.5 0 113 0m-3 6a1.5 1.5 0 00-3 0v2a7.5 7.5 0 0015 0v-5a1.5 1.5 0 00-3 0m-6-3V11m0-5.5v-1a1.5 1.5 0 013 0v1m0 0V11" />
            </svg>
        </div>
        <div>
            <h1 class="text-3xl font-bold text-indigo-800">Solicitar Préstamo</h1>
            <p class="text-gray-500 mt-1">Asignar herramienta a una Orden de Trabajo activa.</p>
        </div>
    </div>

    <div class="bg-white rounded-xl shadow-lg border border-gray-100 overflow-hidden max-w-2xl mx-auto">
        
        <div class="h-2 bg-gradient-to-r from-indigo-500 to-purple-600"></div>

        <div class="bg-indigo-50 px-8 py-6 border-b border-indigo-100 flex items-center justify-between">
            <div>
                <p class="text-xs font-bold text-indigo-500 uppercase tracking-wide">Herramienta Solicitada</p>
                <h2 class="text-2xl font-bold text-indigo-900 mt-1">@herramienta?.Nombre</h2>
                <p class="text-sm text-indigo-700 font-mono">Cód: @herramienta?.Codigo</p>
            </div>
            <div class="bg-white p-3 rounded-full shadow-sm text-indigo-600">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
            </div>
        </div>

        <div class="p-8">
            @if (ots.Any())
            {
                <form method="post" class="space-y-6">
                    
                    <input type="hidden" asp-for="herramienta_id" value="@herramienta?.Id" />
                    <input type="hidden" asp-for="empleado_id" />

                    <div>
                        <label class="block text-sm font-bold text-gray-700 mb-2 uppercase tracking-wide">Orden de Trabajo</label>
                        <div class="relative">
                            <select asp-for="ot_id" class="w-full pl-4 pr-10 py-3 rounded-lg bg-gray-50 border border-gray-300 focus:border-indigo-500 focus:bg-white focus:ring-2 focus:ring-indigo-200 transition duration-200 cursor-pointer appearance-none" required>
                                <option value="">-- Seleccionar OT activa --</option>
                                @foreach (var ot in ots)
                                {
                                    <option value="@ot.Id">OT #@ot.Id - @ot.DescripcionFalla</option>
                                }
                            </select>
                            <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-4 text-gray-500">
                                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
                            </div>
                        </div>
                        <p class="text-xs text-gray-500 mt-1">Solo se muestran tus órdenes en estado 'En Reparación'.</p>
                    </div>

                    <div>
                        <label class="block text-sm font-bold text-gray-700 mb-2 uppercase tracking-wide">Fecha de Préstamo</label>
                        <div class="relative">
                            <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-400">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
                                </svg>
                            </span>
                            <input asp-for="fecha_prestamo" type="date" class="w-full pl-10 pr-4 py-3 rounded-lg bg-gray-50 border border-gray-300 focus:border-indigo-500 focus:bg-white focus:ring-2 focus:ring-indigo-200 transition duration-200" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                        </div>
                    </div>

                    <div class="flex items-center justify-end gap-4 mt-8 pt-6 border-t border-gray-100">
                        <a asp-action="Index" asp-controller="Herramientas" class="text-gray-600 hover:text-indigo-600 font-medium px-4 py-2 rounded-lg hover:bg-gray-50 transition duration-150">
                            Cancelar
                        </a>
                        <button type="submit" class="bg-green-600 hover:bg-green-700 text-white font-bold py-3 px-8 rounded-lg shadow-lg hover:shadow-xl transition duration-150 ease-in-out transform hover:-translate-y-0.5 flex items-center gap-2">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                            </svg>
                            Confirmar Préstamo
                        </button>
                    </div>
                </form>
            }
            else
            {
                <div class="text-center py-4">
                    <div class="mx-auto h-12 w-12 text-yellow-400 mb-3">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                        </svg>
                    </div>
                    <h3 class="text-lg font-medium text-gray-900">No tienes Órdenes de Trabajo activas</h3>
                    <p class="mt-2 text-sm text-gray-500">
                        Para pedir una herramienta prestada, primero debes tener asignada una OT en estado "En Reparación".
                    </p>
                    <div class="mt-6">
                        <a asp-controller="Herramientas" asp-action="Index" class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700">
                            Volver al Inventario
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>