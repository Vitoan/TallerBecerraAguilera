@model List<TallerBecerraAguilera.Models.OtHerramientas>

@{
    ViewData["Title"] = "Mis Herramientas";
}

<div class="container mx-auto px-4 py-8">

    <div class="flex flex-col md:flex-row justify-between items-center mb-8 gap-4">
        <div class="flex items-center gap-4">
            <div class="p-3 bg-indigo-100 rounded-full text-indigo-600 shadow-sm">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                </svg>
            </div>
            <div>
                <h1 class="text-3xl font-bold text-indigo-800">Mis Herramientas Prestadas</h1>
                <p class="text-gray-500 mt-1">Listado de herramientas actualmente en tu poder.</p>
            </div>
        </div>
    </div>

    @if (TempData["success"] != null)
    {
        <div class="bg-green-50 border-l-4 border-green-500 text-green-700 p-4 mb-6 rounded-r shadow-sm flex items-start gap-3" role="alert">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-green-500 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <div>
                <p class="font-bold">¡Operación exitosa!</p>
                <p class="text-sm">@TempData["success"]</p>
            </div>
        </div>
    }
    @if (TempData["error"] != null)
    {
        <div class="bg-red-50 border-l-4 border-red-500 text-red-700 p-4 mb-6 rounded-r shadow-sm flex items-start gap-3" role="alert">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-red-500 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <div>
                <p class="font-bold">Ha ocurrido un error</p>
                <p class="text-sm">@TempData["error"]</p>
            </div>
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="bg-white rounded-xl shadow-lg border border-gray-100 overflow-hidden">
            <div class="overflow-x-auto">
                <table class="min-w-full leading-normal">
                    <thead>
                        <tr class="bg-indigo-50 border-b border-indigo-100 text-left">
                            <th class="px-5 py-3 text-xs font-bold text-indigo-600 uppercase tracking-wider">Herramienta</th>
                            <th class="px-5 py-3 text-xs font-bold text-indigo-600 uppercase tracking-wider">Código</th>
                            <th class="px-5 py-3 text-xs font-bold text-indigo-600 uppercase tracking-wider">OT Vinculada</th>
                            <th class="px-5 py-3 text-xs font-bold text-indigo-600 uppercase tracking-wider">Fecha Préstamo</th>
                            <th class="px-5 py-3 text-xs font-bold text-indigo-600 uppercase tracking-wider text-center">Acción</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="hover:bg-gray-50 transition duration-150 border-b border-gray-200 last:border-b-0">
                                
                                <td class="px-5 py-4 whitespace-nowrap">
                                    <div class="font-bold text-gray-900 text-base">@item.Herramienta?.Nombre</div>
                                </td>

                                <td class="px-5 py-4 whitespace-nowrap">
                                    <span class="font-mono text-xs font-bold text-gray-600 bg-gray-100 px-2 py-1 rounded border border-gray-200">
                                        @item.Herramienta?.Codigo
                                    </span>
                                </td>

                                <td class="px-5 py-4 whitespace-nowrap">
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 border border-blue-200">
                                        OT #@item.OrdenTrabajo?.Id
                                    </span>
                                </td>

                                <td class="px-5 py-4 whitespace-nowrap text-sm text-gray-600">
                                    <div class="flex items-center gap-1.5">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                                            <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
                                        </svg>
                                        @item.fecha_prestamo.ToString("dd/MM/yyyy HH:mm")
                                    </div>
                                </td>

                                <td class="px-5 py-4 whitespace-nowrap text-center">
                                    <form asp-action="Devolver" method="post" class="inline-block">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@item.id" />

                                        <button type="submit" class="bg-green-600 hover:bg-green-700 text-white text-sm font-bold py-2 px-4 rounded-lg shadow-md hover:shadow-lg transition duration-150 transform hover:-translate-y-0.5 flex items-center gap-2">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6" />
                                            </svg>
                                            Devolver
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="bg-green-50 border-l-4 border-green-400 p-10 rounded-r-xl shadow-sm text-center flex flex-col items-center justify-center">
            <div class="bg-green-100 p-4 rounded-full mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
            </div>
            <h3 class="text-xl font-bold text-green-800">¡Estás al día!</h3>
            <p class="text-green-700 mt-2 max-w-md">
                No tienes herramientas pendientes de devolución en este momento.
            </p>
            <div class="mt-8">
                <a asp-controller="Herramientas" asp-action="Index" class="inline-flex items-center px-6 py-3 border border-green-600 text-sm font-bold rounded-lg text-green-700 bg-white hover:bg-green-50 transition duration-150 shadow-sm">
                    Ir al Inventario
                </a>
            </div>
        </div>
    }
</div>