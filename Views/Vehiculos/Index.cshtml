@using TallerBecerraAguilera.Helpers
@model PaginatedList<TallerBecerraAguilera.Models.Vehiculos>

<h1>Vehículos</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Nuevo Vehículo</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Patente</th>
            <th>Marca</th>
            <th>Modelo</th>
            <th>Año</th>
            <th>Tipo</th>
            <th>Cliente</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.patente</td>
                <td>@item.marca</td>
                <td>@item.modelo</td>
                <td>@item.anio</td>
                <td>@item.tipo</td>
                <td>@item.Cliente?.Nombre @item.Cliente?.Apellido</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.id">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.id">Detalle</a> |
                    <a asp-action="Delete" asp-route-id="@item.id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="d-flex justify-content-between align-items-center mt-3">
    <div class="fw-bold">
        Página @Model.PageIndex de @Model.TotalPages
    </div>

    <div class="btn-group">
        <a asp-action="Index"
           asp-route-pageNumber="@(Model.PageIndex - 1)"
           class="btn btn-outline-primary @(!Model.HasPreviousPage ? "disabled" : "")">
            <i class="bi bi-chevron-left"></i> Anterior
        </a>

        <a asp-action="Index"
           asp-route-pageNumber="@(Model.PageIndex + 1)"
           class="btn btn-outline-primary @(!Model.HasNextPage ? "disabled" : "")">
            Siguiente <i class="bi bi-chevron-right"></i>
        </a>
    </div>
</div>
