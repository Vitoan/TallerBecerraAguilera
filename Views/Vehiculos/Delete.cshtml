@model TallerBecerraAguilera.Models.Vehiculos

@{
    ViewData["Title"] = "Eliminar Vehículo";
}

<div class="container mx-auto px-4 py-8">
    
    <h1 class="text-3xl font-bold text-indigo-800 mb-6">Eliminar Vehículo</h1>

    <div class="bg-red-50 border-l-4 border-red-500 text-red-700 p-4 mb-8 rounded-r shadow-sm" role="alert">
        <p class="font-bold">¿Estás seguro que deseas eliminar este vehículo?</p>
        <p class="text-sm">Esta acción es irreversible y se perderán los datos asociados.</p>
    </div>

    @if (TempData["Mensaje"] != null)
{
    <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-6 rounded shadow-sm flex justify-between items-center" role="alert">
        <div>
            <p class="font-bold">¡Éxito!</p>
            <p>@TempData["Mensaje"]</p>
        </div>
        <button type="button" onclick="this.parentElement.remove()" class="text-green-700 hover:text-green-900">
            <span class="text-2xl">&times;</span>
        </button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-6 rounded shadow-sm flex justify-between items-center" role="alert">
        <div>
            <p class="font-bold">¡Error!</p>
            <p>@TempData["Error"]</p>
        </div>
        <button type="button" onclick="this.parentElement.remove()" class="text-red-700 hover:text-red-900">
            <span class="text-2xl">&times;</span>
        </button>
    </div>
}

    <div class="bg-white rounded-xl shadow-lg overflow-hidden max-w-4xl">
        
        <div class="bg-indigo-50 px-6 py-4 border-b border-indigo-100">
            <h2 class="text-xl font-semibold text-gray-800">Detalles del Vehículo</h2>
        </div>

        <div class="p-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                
                <div class="bg-gray-50 p-4 rounded-lg">
                    <label class="block text-gray-500 text-xs font-bold uppercase tracking-wider mb-1">
                        Patente
                    </label>
                    <p class="text-gray-900 font-semibold text-lg">
                        @Html.DisplayFor(model => model.patente)
                    </p>
                </div>

                <div class="bg-gray-50 p-4 rounded-lg">
                    <label class="block text-gray-500 text-xs font-bold uppercase tracking-wider mb-1">
                        Marca
                    </label>
                    <p class="text-gray-900 font-semibold text-lg">
                        @Html.DisplayFor(model => model.marca)
                    </p>
                </div>

                <div class="bg-gray-50 p-4 rounded-lg md:col-span-2">
                    <label class="block text-gray-500 text-xs font-bold uppercase tracking-wider mb-1">
                        Modelo
                    </label>
                    <p class="text-gray-900 font-semibold text-lg">
                        @Html.DisplayFor(model => model.modelo)
                    </p>
                </div>
            </div>
        </div>

        <div class="bg-gray-50 px-6 py-4 flex justify-end items-center gap-3">
            <form asp-action="Delete">
                <input type="hidden" asp-for="id" />
                
                <a asp-action="Index" class="inline-block bg-white text-gray-700 font-semibold py-2 px-4 border border-gray-300 rounded-lg shadow-sm hover:bg-gray-50 transition duration-150 ease-in-out">
                    Cancelar
                </a>

                <button type="submit" class="bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-6 rounded-lg shadow-md transition duration-150 ease-in-out transform hover:-translate-y-0.5">
                    Eliminar Vehículo
                </button>
            </form>
        </div>
    </div>
</div>