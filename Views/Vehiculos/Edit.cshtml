@model TallerBecerraAguilera.Models.Vehiculos

@{
    ViewData["Title"] = "Editar Vehículo";
}

<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" />

<style>
    .select2-container--bootstrap-5 .select2-selection {
        border-color: #d1d5db !important; /* gray-300 */
        border-radius: 0.5rem !important; /* rounded-lg */
        padding: 0.55rem 0.75rem !important;
        height: auto !important;
    }
    .select2-container--bootstrap-5 .select2-selection--single .select2-selection__rendered {
        color: #374151 !important; /* gray-700 */
    }
    .select2-container--bootstrap-5 .select2-dropdown .select2-search .select2-search__field:focus {
        border-color: #6366f1 !important; /* indigo-500 */
        box-shadow: 0 0 0 0.25rem rgba(99, 102, 241, 0.25) !important;
    }
</style>

<div class="container mx-auto px-4 py-8">

    <div class="mb-8 flex justify-between items-center">
        <div>
            <h1 class="text-3xl font-bold text-indigo-800">Editar Vehículo</h1>
            <p class="text-gray-500 mt-2">Modifica los datos del vehículo existente.</p>
        </div>
        <div class="p-3 bg-indigo-100 rounded-full text-indigo-600 hidden md:block">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
            </svg>
        </div>
    </div>

    <div class="bg-white rounded-xl shadow-lg border border-gray-100 overflow-hidden">
        
        <div class="h-2 bg-gradient-to-r from-indigo-500 to-purple-600"></div>

        <div class="p-8">
            <form asp-action="Edit" class="space-y-6">
                <input type="hidden" asp-for="id" />

                <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm font-medium mb-4"></div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    
                    <div>
                        <label asp-for="patente" class="block text-sm font-bold text-gray-700 mb-2 uppercase tracking-wide">Patente</label>
                        <input asp-for="patente" class="w-full px-4 py-3 rounded-lg bg-gray-50 border border-gray-300 focus:border-indigo-500 focus:bg-white focus:ring-2 focus:ring-indigo-200 transition duration-200" />
                        <span asp-validation-for="patente" class="text-red-500 text-xs mt-1"></span>
                    </div>

                    <div>
                        <label asp-for="marca" class="block text-sm font-bold text-gray-700 mb-2 uppercase tracking-wide">Marca</label>
                        <input asp-for="marca" class="w-full px-4 py-3 rounded-lg bg-gray-50 border border-gray-300 focus:border-indigo-500 focus:bg-white focus:ring-2 focus:ring-indigo-200 transition duration-200" />
                        <span asp-validation-for="marca" class="text-red-500 text-xs mt-1"></span>
                    </div>

                    <div>
                        <label asp-for="modelo" class="block text-sm font-bold text-gray-700 mb-2 uppercase tracking-wide">Modelo</label>
                        <input asp-for="modelo" class="w-full px-4 py-3 rounded-lg bg-gray-50 border border-gray-300 focus:border-indigo-500 focus:bg-white focus:ring-2 focus:ring-indigo-200 transition duration-200" />
                        <span asp-validation-for="modelo" class="text-red-500 text-xs mt-1"></span>
                    </div>

                    <div>
                        <label asp-for="anio" class="block text-sm font-bold text-gray-700 mb-2 uppercase tracking-wide">Año</label>
                        <input asp-for="anio" class="w-full px-4 py-3 rounded-lg bg-gray-50 border border-gray-300 focus:border-indigo-500 focus:bg-white focus:ring-2 focus:ring-indigo-200 transition duration-200" />
                        <span asp-validation-for="anio" class="text-red-500 text-xs mt-1"></span>
                    </div>

                    <div>
                        <label asp-for="tipo" class="block text-sm font-bold text-gray-700 mb-2 uppercase tracking-wide">Tipo de Vehículo</label>
                        <select asp-for="tipo" class="w-full px-4 py-3 rounded-lg bg-gray-50 border border-gray-300 focus:border-indigo-500 focus:bg-white focus:ring-2 focus:ring-indigo-200 transition duration-200 cursor-pointer" 
                                asp-items="Html.GetEnumSelectList<TallerBecerraAguilera.Models.TipoVehiculo>()">
                        </select>
                        <span asp-validation-for="tipo" class="text-red-500 text-xs mt-1"></span>
                    </div>

                    <div>
                        <label asp-for="clienteId" class="block text-sm font-bold text-gray-700 mb-2 uppercase tracking-wide">Cliente (Buscador)</label>
                        <select asp-for="clienteId" class="form-select w-full" id="buscadorClientes"></select>
                        <span asp-validation-for="clienteId" class="text-red-500 text-xs mt-1"></span>
                        <p class="text-xs text-gray-400 mt-2">Escribe para buscar por nombre o DNI.</p>
                    </div>

                    <div class="md:col-span-2">
                        <label asp-for="observaciones" class="block text-sm font-bold text-gray-700 mb-2 uppercase tracking-wide">Observaciones</label>
                        <textarea asp-for="observaciones" rows="3" class="w-full px-4 py-3 rounded-lg bg-gray-50 border border-gray-300 focus:border-indigo-500 focus:bg-white focus:ring-2 focus:ring-indigo-200 transition duration-200"></textarea>
                    </div>

                </div>

                <div class="flex items-center justify-end gap-4 mt-8 pt-6 border-t border-gray-100">
                    <a asp-action="Index" class="text-gray-600 hover:text-indigo-600 font-medium px-4 py-2 rounded-lg hover:bg-gray-50 transition duration-150">
                        Cancelar
                    </a>
                    <button type="submit" class="bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 px-8 rounded-lg shadow-lg hover:shadow-xl transition duration-150 ease-in-out transform hover:-translate-y-0.5 flex items-center gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                            <path d="M17.414 2.586a2 2 0 00-2.828 0L7 9.586V13h3.414l7.586-7.586a2 2 0 000-2.828z" />
                            <path fill-rule="evenodd" d="M2 6a2 2 0 012-2h4a1 1 0 010 2H4v10h10v-4a1 1 0 112 0v4a2 2 0 01-2 2H4a2 2 0 01-2-2V6z" clip-rule="evenodd" />
                        </svg>
                        Guardar Cambios
                    </button>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    
    <script>
        $(document).ready(function() {
            // Lógica para precargar el dato existente
            // Usamos ClienteId con mayúscula si así está en tu modelo C# (suele ser PascalCase)
            // Si tu modelo usa 'clienteId' minúscula, cámbialo abajo.
            var clienteId = '@Model.clienteId'; 
            var clienteNombre = '@(Model.Cliente != null ? $"{Model.Cliente.Nombre} {Model.Cliente.Apellido}" : "")';

            // Escapar comillas simples en el nombre por seguridad JS
            clienteNombre = clienteNombre.replace(/'/g, "\\'");

            $('#buscadorClientes').select2({
                theme: 'bootstrap-5',
                language: {
                    noResults: function() { return "No se encontraron clientes"; },
                    searching: function() { return "Buscando..." },
                    inputTooShort: function() { return "Ingresa al menos 1 caracter"; }
                },
                ajax: {
                    url: '@Url.Action("BuscarClientes", "Clientes")', // Asegúrate que el controlador sea 'Clientes'
                    dataType: 'json',
                    delay: 250,
                    data: function (params) { return { term: params.term }; },
                    processResults: function (data) { return { results: data.results }; },
                    cache: true
                },
                placeholder: 'Buscar cliente...',
                minimumInputLength: 1,
                allowClear: true,
                width: '100%' // Importante para que ocupe todo el espacio en Tailwind
            });

            // Si ya hay un cliente asignado, creamos la opción y la seleccionamos
            if(clienteId && clienteId != 0) {
                var option = new Option(clienteNombre, clienteId, true, true);
                $('#buscadorClientes').append(option).trigger('change');
            }
        });
    </script>
}