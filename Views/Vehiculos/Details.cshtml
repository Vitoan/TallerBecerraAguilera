@model TallerBecerraAguilera.Models.Vehiculos

@{
    ViewData["Title"] = "Detalles del Vehículo";
}

<div class="container mx-auto px-4 py-8">

    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-indigo-800">Detalles del Vehículo</h1>
        <a asp-action="Index" class="text-gray-600 hover:text-indigo-600 font-medium transition duration-150 flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
            </svg>
            Volver a la lista
        </a>
    </div>

    <div class="bg-white rounded-xl shadow-lg overflow-hidden border border-gray-100">
        
        <div class="bg-indigo-50 px-8 py-6 border-b border-indigo-100 flex items-center gap-4">
            <div class="p-3 bg-indigo-100 rounded-full text-indigo-600">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" />
                </svg>
            </div>
            <div>
                <h2 class="text-2xl font-bold text-gray-800">@Model.marca @Model.modelo</h2>
                <p class="text-indigo-500 font-medium">@Model.patente</p>
            </div>
        </div>

        <div class="p-8">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                
                <div class="bg-gray-50 p-5 rounded-lg border border-gray-100">
                    <h3 class="text-xs font-bold text-gray-400 uppercase tracking-wider mb-4 border-b pb-2">Ficha Técnica</h3>
                    
                    <div class="mb-3">
                        <span class="block text-xs text-gray-500 uppercase">Año</span>
                        <span class="block text-lg font-semibold text-gray-800">@Model.anio</span>
                    </div>
                    
                    <div>
                        <span class="block text-xs text-gray-500 uppercase">Tipo</span>
                        <span class="block text-lg font-semibold text-gray-800">@Model.tipo</span>
                    </div>
                </div>

                <div class="bg-gray-50 p-5 rounded-lg border border-gray-100 md:col-span-2">
                    <h3 class="text-xs font-bold text-gray-400 uppercase tracking-wider mb-4 border-b pb-2">Propietario</h3>
                    
                    <div class="flex items-center gap-4">
                        <div class="h-12 w-12 rounded-full bg-indigo-200 flex items-center justify-center text-indigo-700 font-bold text-xl">
                            @(Model.Cliente?.Nombre?.Substring(0,1) ?? "?")
                        </div>
                        <div>
                            <span class="block text-lg font-bold text-gray-800">
                                @(Model.Cliente != null ? $"{Model.Cliente.Nombre} {Model.Cliente.Apellido}" : "Sin asignar")
                            </span>
                            <span class="text-sm text-gray-500">Cliente Registrado</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="bg-gray-50 px-8 py-4 border-t border-gray-100 flex justify-end gap-3">
            <a asp-action="Edit" asp-route-id="@Model.id" class="bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-6 rounded-lg shadow-md transition duration-150 ease-in-out flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
                </svg>
                Editar Información
            </a>
        </div>
    </div>
</div>