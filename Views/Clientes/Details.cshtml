@model TallerBecerraAguilera.Models.Clientes

@{
    ViewData["Title"] = "Detalle del Cliente";
}

<h1>Detalle del Cliente</h1>

<div class="mt-3">
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Nombre</dd>

        <dt class="col-sm-2">Apellido</dt>
        <dd class="col-sm-10">@Model.Apellido</dd>

        <dt class="col-sm-2">DNI</dt>
        <dd class="col-sm-10">@Model.Dni</dd>

        <dt class="col-sm-2">Tel√©fono</dt>
        <dd class="col-sm-10">@Model.Telefono</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
    </dl>

    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</div>
