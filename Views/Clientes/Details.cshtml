@model TallerBecerraAguilera.Models.Clientes
@using TallerBecerraAguilera.Models

@{
    ViewData["Title"] = "Detalle del Cliente";
    // Calculamos las iniciales para el avatar
    var iniciales = (Model.Nombre?.Substring(0, 1) ?? "") + (Model.Apellido?.Substring(0, 1) ?? "");
}

<div class="container mx-auto px-4 py-8">

    <div class="flex justify-between items-center mb-6">
        <div>
            <h1 class="text-3xl font-bold text-indigo-800">Perfil del Cliente</h1>
            <p class="text-gray-500 mt-1">Información detallada y vehículos asociados.</p>
        </div>
        <a asp-action="Index" class="text-gray-600 hover:text-indigo-600 font-medium transition duration-150 flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
            </svg>
            Volver a la lista
        </a>
    </div>

    <div class="bg-white rounded-xl shadow-lg overflow-hidden border border-gray-100 mb-8">
        
        <div class="bg-gradient-to-r from-indigo-500 to-purple-600 px-8 py-6 flex items-center gap-6">
            <div class="h-20 w-20 bg-white rounded-full flex items-center justify-center text-indigo-600 font-bold text-3xl shadow-inner border-4 border-indigo-200">
                @iniciales
            </div>
            <div class="text-white">
                <h2 class="text-2xl font-bold">@Model.Nombre @Model.Apellido</h2>
                <p class="text-indigo-100 opacity-90">
                    Cliente registrado el @(Model.Created_at.HasValue ? Model.Created_at.Value.ToString("dd/MM/yyyy") : "Fecha N/A")
                </p>
            </div>
        </div>

        <div class="p-8">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                
                <div class="flex items-start gap-4 p-4 rounded-lg bg-gray-50 border border-gray-100">
                    <div class="p-2 bg-blue-100 text-blue-600 rounded-lg">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V8a2 2 0 00-2-2h-5m-4 0V5a2 2 0 114 0v1m-4 0a2 2 0 104 0m-5 8a2 2 0 100-4 2 2 0 000 4zm0 0c1.306 0 2.417.835 2.83 2M9 14a3.001 3.001 0 00-2.83 2M15 11h3m-3 4h2" />
                        </svg>
                    </div>
                    <div>
                        <p class="text-xs font-bold text-gray-500 uppercase tracking-wide">DNI / Identificación</p>
                        <p class="text-lg font-semibold text-gray-800">@Model.Dni</p>
                    </div>
                </div>

                <div class="flex items-start gap-4 p-4 rounded-lg bg-gray-50 border border-gray-100">
                    <div class="p-2 bg-green-100 text-green-600 rounded-lg">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                        </svg>
                    </div>
                    <div class="overflow-hidden">
                        <p class="text-xs font-bold text-gray-500 uppercase tracking-wide">Correo Electrónico</p>
                        <p class="text-lg font-semibold text-gray-800 truncate">@Model.Email</p>
                    </div>
                </div>

                <div class="flex items-start gap-4 p-4 rounded-lg bg-gray-50 border border-gray-100">
                    <div class="p-2 bg-purple-100 text-purple-600 rounded-lg">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                        </svg>
                    </div>
                    <div>
                        <p class="text-xs font-bold text-gray-500 uppercase tracking-wide">Teléfono</p>
                        <p class="text-lg font-semibold text-gray-800">@Model.Telefono</p>
                    </div>
                </div>

            </div>
        </div>

        <div class="bg-gray-50 px-8 py-4 border-t border-gray-100 flex justify-end">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="bg-amber-500 hover:bg-amber-600 text-white font-bold py-2 px-6 rounded-lg shadow transition duration-150 ease-in-out flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
                </svg>
                Editar Datos
            </a>
        </div>
    </div>

    <div class="mt-10">
        <h3 class="text-2xl font-bold text-gray-800 mb-4 flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
            </svg>
            Vehículos Registrados 
            <span class="bg-indigo-100 text-indigo-800 text-sm font-medium px-2.5 py-0.5 rounded-full ml-2">
                @(Model.Vehiculos?.Count ?? 0)
            </span>
        </h3>

        @if (Model.Vehiculos != null && Model.Vehiculos.Any())
        {
            <div class="bg-white rounded-xl shadow-lg border border-gray-100 overflow-hidden">
                <div class="overflow-x-auto">
                    <table class="min-w-full leading-normal">
                        <thead>
                            <tr class="bg-gray-50 border-b border-gray-100 text-left">
                                <th class="px-5 py-3 text-xs font-bold text-gray-500 uppercase tracking-wider">Patente</th>
                                <th class="px-5 py-3 text-xs font-bold text-gray-500 uppercase tracking-wider">Marca / Modelo</th>
                                <th class="px-5 py-3 text-xs font-bold text-gray-500 uppercase tracking-wider">Año</th>
                                <th class="px-5 py-3 text-xs font-bold text-gray-500 uppercase tracking-wider">Tipo</th>
                                <th class="px-5 py-3 text-xs font-bold text-gray-500 uppercase tracking-wider text-right">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var vehiculo in Model.Vehiculos)
                            {
                                <tr class="hover:bg-gray-50 transition duration-150 border-b border-gray-100 last:border-b-0">
                                    <td class="px-5 py-4 whitespace-nowrap">
                                        <span class="px-3 py-1 inline-flex text-sm leading-5 font-bold rounded-full bg-gray-100 text-gray-800 border border-gray-300 font-mono">
                                            @vehiculo.patente
                                        </span>
                                    </td>
                                    <td class="px-5 py-4 whitespace-nowrap">
                                        <div class="text-sm font-bold text-gray-900">@vehiculo.marca</div>
                                        <div class="text-sm text-gray-500">@vehiculo.modelo</div>
                                    </td>
                                    <td class="px-5 py-4 whitespace-nowrap text-sm text-gray-700">
                                        @vehiculo.anio
                                    </td>
                                    <td class="px-5 py-4 whitespace-nowrap text-sm text-gray-700">
                                        @vehiculo.tipo
                                    </td>
                                    <td class="px-5 py-4 whitespace-nowrap text-right text-sm font-medium">
                                        <a asp-controller="Vehiculos" asp-action="Details" asp-route-id="@vehiculo.id" class="text-indigo-600 hover:text-indigo-900 flex justify-end items-center gap-1">
                                            Ver Ficha
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                                            </svg>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
        else
        {
            <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 rounded-r shadow-sm flex justify-between items-center">
                <div class="flex items-center">
                    <svg class="h-6 w-6 text-yellow-500 mr-3" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                    </svg>
                    <div>
                        <p class="font-bold text-yellow-700">Sin vehículos asociados</p>
                        <p class="text-sm text-yellow-600">Este cliente aún no tiene vehículos registrados en el taller.</p>
                    </div>
                </div>
                <a asp-controller="Vehiculos" asp-action="Create" class="bg-yellow-500 hover:bg-yellow-600 text-white font-bold py-2 px-4 rounded shadow text-sm transition duration-150">
                    Registrar Vehículo
                </a>
            </div>
        }
    </div>
</div>