@using TallerBecerraAguilera.Helpers
@model PaginatedList<TallerBecerraAguilera.Models.Clientes>

@{
    ViewData["Title"] = "Listado de Clientes";
}

<div class="container mx-auto px-4 py-8">

    <div class="flex flex-col md:flex-row justify-between items-center mb-6 gap-4">
        <div>
            <h1 class="text-3xl font-bold text-indigo-800">Clientes</h1>
            <p class="text-gray-500 mt-1">Gestión de la base de datos de clientes.</p>
        </div>

        <a asp-action="Create" class="bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-6 rounded-lg shadow-md transition duration-150 ease-in-out flex items-center gap-2 transform hover:-translate-y-0.5">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                <path d="M8 9a3 3 0 100-6 3 3 0 000 6zM8 11a6 6 0 016 6H2a6 6 0 016-6zM16 7a1 1 0 10-2 0 1 1 0 002 0zM16 9a6 6 0 016 6h-2a6 6 0 01-6-6z" />
            </svg>
            Nuevo Cliente
        </a>
    </div>

    @if (TempData["Mensaje"] != null)
{
    <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-6 rounded shadow-sm flex justify-between items-center" role="alert">
        <div>
            <p class="font-bold">¡Éxito!</p>
            <p>@TempData["Mensaje"]</p>
        </div>
        <button type="button" onclick="this.parentElement.remove()" class="text-green-700 hover:text-green-900">
            <span class="text-2xl">&times;</span>
        </button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-6 rounded shadow-sm flex justify-between items-center" role="alert">
        <div>
            <p class="font-bold">¡Error!</p>
            <p>@TempData["Error"]</p>
        </div>
        <button type="button" onclick="this.parentElement.remove()" class="text-red-700 hover:text-red-900">
            <span class="text-2xl">&times;</span>
        </button>
    </div>
}


    <div class="bg-white rounded-xl shadow-lg border border-gray-100 overflow-hidden">
        <div class="overflow-x-auto">
            <table class="min-w-full leading-normal">
                <thead>
                    <tr class="bg-indigo-50 border-b border-indigo-100 text-left">
                        <th class="px-5 py-3 text-xs font-bold text-indigo-600 uppercase tracking-wider">Cliente</th>
                        <th class="px-5 py-3 text-xs font-bold text-indigo-600 uppercase tracking-wider">DNI</th>
                        <th class="px-5 py-3 text-xs font-bold text-indigo-600 uppercase tracking-wider">Contacto</th>
                        <th class="px-5 py-3 text-xs font-bold text-indigo-600 uppercase tracking-wider text-right">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="hover:bg-gray-50 transition duration-150 border-b border-gray-200 last:border-b-0">
                            
                            <td class="px-5 py-4 whitespace-nowrap">
                                <div class="flex items-center">
                                    <div class="flex-shrink-0 h-10 w-10 bg-indigo-100 rounded-full flex items-center justify-center text-indigo-600 font-bold text-lg">
                                        @(item.Nombre?.Substring(0, 1) ?? "?")
                                    </div>
                                    <div class="ml-4">
                                        <div class="text-sm font-bold text-gray-900">@item.Apellido, @item.Nombre</div>
                                    </div>
                                </div>
                            </td>

                            <td class="px-5 py-4 whitespace-nowrap">
                                <span class="px-2 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">
                                    @item.Dni
                                </span>
                            </td>

                            <td class="px-5 py-4 whitespace-nowrap">
                                <div class="text-sm text-gray-900 flex items-center gap-1">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                                        <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
                                        <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
                                    </svg>
                                    @item.Email
                                </div>
                                <div class="text-sm text-gray-500 mt-1 flex items-center gap-1">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                                        <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
                                    </svg>
                                    @item.Telefono
                                </div>
                            </td>

                            <td class="px-5 py-4 whitespace-nowrap text-right text-sm font-medium">
                                <div class="flex justify-end items-center gap-3">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="text-indigo-600 hover:text-indigo-900" title="Editar">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                                            <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
                                        </svg>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="text-gray-500 hover:text-gray-700" title="Detalles">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                                            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
                                        </svg>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="text-red-500 hover:text-red-700" title="Eliminar">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                                            <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
                                        </svg>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="bg-gray-50 px-5 py-3 border-t border-gray-200 flex items-center justify-between">
            <span class="text-sm text-gray-700">
                Página <span class="font-bold">@Model.PageIndex</span> de <span class="font-bold">@Model.TotalPages</span>
            </span>

            <div class="inline-flex gap-2">
                <a asp-action="Index"
                   asp-route-pageNumber="@(Model.PageIndex - 1)"
                   class="px-4 py-2 text-sm font-medium bg-white border border-gray-300 rounded-lg hover:bg-gray-50 text-gray-700 transition duration-150 @(!Model.HasPreviousPage ? "pointer-events-none opacity-50" : "")">
                    Anterior
                </a>

                <a asp-action="Index"
                   asp-route-pageNumber="@(Model.PageIndex + 1)"
                   class="px-4 py-2 text-sm font-medium bg-white border border-gray-300 rounded-lg hover:bg-gray-50 text-gray-700 transition duration-150 @(!Model.HasNextPage ? "pointer-events-none opacity-50" : "")">
                    Siguiente
                </a>
            </div>
        </div>
    </div>
</div>