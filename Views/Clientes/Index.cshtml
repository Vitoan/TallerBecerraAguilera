@using TallerBecerraAguilera.Helpers
@model PaginatedList<TallerBecerraAguilera.Models.Clientes>

@{
    ViewData["Title"] = "Clientes";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">ðŸ‘¤ Listado de Clientes</h1>
    <a asp-action="Create" class="btn btn-primary btn-icon-split">
        <span class="icon"><i class="bi bi-person-plus-fill"></i></span>
        <span class="text">Nuevo Cliente</span>
    </a>
</div>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Mensaje"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover table-bordered align-middle">
                <thead class="table-light">
                    <tr>
                        <th>@Html.DisplayNameFor(m => m.First().Nombre)</th>
                        <th>@Html.DisplayNameFor(m => m.First().Apellido)</th>
                        <th>@Html.DisplayNameFor(m => m.First().Dni)</th>
                        <th>@Html.DisplayNameFor(m => m.First().Telefono)</th>
                        <th>@Html.DisplayNameFor(m => m.First().Email)</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Nombre</td>
                            <td>@item.Apellido</td>
                            <td>@item.Dni</td>
                            <td>@item.Telefono</td>
                            <td>@item.Email</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">
                                    <i class="bi bi-pencil-square"></i> <span class="d-none d-md-inline">Editar</span>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1">
                                    <i class="bi bi-info-circle"></i> <span class="d-none d-md-inline">Detalles</span>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i> <span class="d-none d-md-inline">Eliminar</span>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- PAGINACIÃ“N -->
        <div class="d-flex justify-content-between align-items-center mt-3">
            <div>
                PÃ¡gina @Model.PageIndex de @Model.TotalPages
            </div>
            <div>
                <a asp-action="Index"
                   asp-route-pageNumber="@(Model.PageIndex - 1)"
                   class="btn btn-outline-primary @(!Model.HasPreviousPage ? "disabled" : "")">
                    <i class="bi bi-arrow-left"></i> Anterior
                </a>

                <a asp-action="Index"
                   asp-route-pageNumber="@(Model.PageIndex + 1)"
                   class="btn btn-outline-primary @(!Model.HasNextPage ? "disabled" : "")">
                    Siguiente <i class="bi bi-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>
</div>
