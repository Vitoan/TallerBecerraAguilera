@model TallerBecerraAguilera.Models.Usuarios

@{
    ViewData["Title"] = "Restablecer Contraseña";
}

<div class="min-h-[70vh] flex items-center justify-center p-4">
    
    <div class="max-w-md w-full bg-white rounded-2xl shadow-xl border border-gray-100 overflow-hidden">
        
        <div class="bg-cyan-50 p-6 flex items-center gap-4 border-b border-cyan-100">
            <div class="w-12 h-12 bg-white rounded-full flex items-center justify-center text-cyan-600 shadow-sm shrink-0">
                <i class="bi bi-shield-lock-fill text-2xl"></i>
            </div>
            <div>
                <h2 class="text-xl font-bold text-cyan-900">Nueva Contraseña</h2>
                <p class="text-sm text-cyan-700/80">Restablecer acceso de usuario.</p>
            </div>
        </div>

        <div class="p-8">
            <div class="mb-6 bg-gray-50 rounded-xl p-3 border border-gray-100 flex items-center gap-3">
                <div class="w-10 h-10 rounded-full bg-gray-200 flex items-center justify-center text-gray-500 font-bold border border-gray-300">
                    <i class="bi bi-person-fill"></i>
                </div>
                <div>
                    <span class="text-xs text-gray-400 font-bold uppercase tracking-wider block">Usuario seleccionado</span>
                    <span class="text-sm font-bold text-gray-800">@Model.email</span>
                </div>
            </div>

            <form method="post" class="space-y-6">
                <input type="hidden" asp-for="id" />

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Nueva Contraseña</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="bi bi-key text-gray-400"></i>
                        </div>
                        <input type="password" name="nuevaClave" required minlength="6"
                               class="w-full pl-10 pr-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-cyan-500/20 focus:border-cyan-500 transition-colors text-gray-700 placeholder-gray-400" 
                               placeholder="Ingrese la nueva clave..." />
                    </div>
                    <p class="mt-2 text-xs text-gray-500">
                        <i class="bi bi-info-circle mr-1"></i> La contraseña anterior dejará de funcionar inmediatamente.
                    </p>
                </div>

                <div class="flex flex-col gap-3 pt-2">
                    <button type="submit" class="w-full bg-cyan-600 hover:bg-cyan-700 text-white font-bold py-3 rounded-xl shadow-md transition-all hover:shadow-lg flex items-center justify-center gap-2">
                        <i class="bi bi-check-circle"></i> Actualizar Contraseña
                    </button>
                    
                    <a asp-action="Index" class="w-full bg-white border border-gray-200 text-gray-600 hover:bg-gray-50 hover:text-gray-800 font-medium py-3 rounded-xl transition flex items-center justify-center">
                        Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>