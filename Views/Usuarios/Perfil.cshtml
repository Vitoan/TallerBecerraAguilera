@model TallerBecerraAguilera.Models.Usuarios

@{
    ViewData["Title"] = "Mi Perfil";
}

<div class="max-w-5xl mx-auto">
    
    <div class="mb-8">
        <h2 class="text-3xl font-bold text-gray-800">Mi Perfil</h2>
        <p class="text-gray-500">Administra tu información personal y seguridad de la cuenta.</p>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="bg-green-50 border-l-4 border-green-500 text-green-700 p-4 mb-6 rounded-r shadow-sm flex justify-between items-center">
            <span class="flex items-center gap-2"><i class="bi bi-check-circle-fill"></i> @TempData["Success"]</span>
            <button onclick="this.parentElement.style.display='none'" class="text-green-500 hover:text-green-700"><i class="bi bi-x-lg"></i></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="bg-red-50 border-l-4 border-red-500 text-red-700 p-4 mb-6 rounded-r shadow-sm flex justify-between items-center">
            <span class="flex items-center gap-2"><i class="bi bi-exclamation-triangle-fill"></i> @TempData["Error"]</span>
            <button onclick="this.parentElement.style.display='none'" class="text-red-500 hover:text-red-700"><i class="bi bi-x-lg"></i></button>
        </div>
    }

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        
        <div class="lg:col-span-1 space-y-6">
            <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6 text-center relative overflow-hidden">
                <div class="absolute top-0 left-0 w-full h-24 bg-gradient-to-r from-primary to-indigo-400"></div>
                
                <div class="relative mt-8 mb-4 inline-block">
                    <img src="@Model.avatar_path" class="w-32 h-32 rounded-full object-cover border-4 border-white shadow-lg mx-auto bg-white" alt="Avatar" />
                    
                    <label for="avatarInput" class="absolute bottom-1 right-1 bg-white text-gray-700 p-2 rounded-full shadow-md cursor-pointer hover:bg-gray-50 border border-gray-200 transition" title="Cambiar foto">
                        <i class="bi bi-camera-fill"></i>
                    </label>
                </div>

                <h3 class="text-xl font-bold text-gray-800">@User!.Identity!.Name</h3>
                <span class="px-3 py-1 rounded-full text-xs font-bold uppercase tracking-wider bg-gray-100 text-gray-600 mt-2 inline-block">
                    @Model.rol
                </span>

                <form asp-action="EditarAvatar" method="post" enctype="multipart/form-data" id="formAvatar" class="mt-4 pt-4 border-t border-gray-100 text-left">
                    <input type="hidden" asp-for="id" />
                    <input type="file" name="Avatar" id="avatarInput" class="hidden" onchange="document.getElementById('formAvatar').submit();" />
                    
                    <div class="flex items-center justify-between">
                        <span class="text-xs text-gray-500 font-medium">Opciones de imagen</span>
                        <div class="flex items-center gap-2">
                             <div class="flex items-center gap-2">
                                <input type="checkbox" id="chkEliminar" name="EliminarAvatar" class="w-4 h-4 text-red-600 rounded border-gray-300 focus:ring-red-500" />
                                <label for="chkEliminar" class="text-xs text-red-500 cursor-pointer">Eliminar</label>
                            </div>
                            <button class="text-xs bg-gray-100 hover:bg-gray-200 px-2 py-1 rounded transition text-gray-600">Aplicar</button>
                        </div>
                    </div>
                </form>
            </div>

            <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6">
                <h4 class="text-sm font-bold text-gray-400 uppercase tracking-wider mb-4">Información de Cuenta</h4>
                <div class="space-y-3">
                    <div class="flex items-center justify-between">
                        <span class="text-sm text-gray-500">ID Usuario</span>
                        <span class="text-sm font-mono font-medium text-gray-800">#@Model.id</span>
                    </div>
                    <div class="flex items-center justify-between">
                        <span class="text-sm text-gray-500">Estado</span>
                        <span class="text-xs bg-green-100 text-green-700 px-2 py-0.5 rounded-full font-bold">Activo</span>
                    </div>
                    <div class="flex items-center justify-between">
                        <span class="text-sm text-gray-500">Último Acceso</span>
                        <span class="text-sm text-gray-800">Hoy</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="lg:col-span-2 space-y-6">
            
            <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6 md:p-8">
                <div class="flex items-center gap-3 mb-6 border-b border-gray-100 pb-4">
                    <div class="w-10 h-10 rounded-full bg-blue-50 text-blue-600 flex items-center justify-center">
                        <i class="bi bi-person-lines-fill text-xl"></i>
                    </div>
                    <div>
                        <h3 class="text-lg font-bold text-gray-800">Datos de Contacto</h3>
                        <p class="text-xs text-gray-500">Actualiza tu dirección de correo electrónico.</p>
                    </div>
                </div>

                <form asp-action="EditarDatosPersonales" method="post" class="space-y-4">
                    <input type="hidden" asp-for="id" />
                    
                    <div>
                        <label asp-for="email" class="block text-sm font-medium text-gray-700 mb-1">Correo Electrónico</label>
                        <div class="flex gap-2">
                            <input asp-for="email" class="flex-1 px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500 transition-colors text-gray-700" />
                            <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg font-medium transition shadow-sm">
                                Guardar
                            </button>
                        </div>
                    </div>
                </form>
            </div>

            <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6 md:p-8">
                <div class="flex items-center gap-3 mb-6 border-b border-gray-100 pb-4">
                    <div class="w-10 h-10 rounded-full bg-amber-50 text-amber-600 flex items-center justify-center">
                        <i class="bi bi-shield-lock-fill text-xl"></i>
                    </div>
                    <div>
                        <h3 class="text-lg font-bold text-gray-800">Seguridad</h3>
                        <p class="text-xs text-gray-500">Cambia tu contraseña periódicamente para mantener tu cuenta segura.</p>
                    </div>
                </div>

                <form asp-action="CambiarClave" method="post" class="space-y-5">
                    <input type="hidden" asp-for="id" />

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Contraseña Actual</label>
                        <input type="password" name="ClaveActual" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-500/20 focus:border-amber-500 transition-colors bg-gray-50/50" placeholder="••••••••" />
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Nueva Contraseña</label>
                            <input type="password" name="NuevaClave" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-500/20 focus:border-amber-500 transition-colors" placeholder="Nueva clave" />
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Confirmar Nueva</label>
                            <input type="password" name="ConfirmarClave" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-500/20 focus:border-amber-500 transition-colors" placeholder="Repetir clave" />
                        </div>
                    </div>

                    <div class="pt-2">
                        <button type="submit" class="w-full md:w-auto bg-amber-500 hover:bg-amber-600 text-white px-6 py-2.5 rounded-lg font-medium transition shadow-sm flex items-center justify-center gap-2">
                            <i class="bi bi-key"></i> Actualizar Contraseña
                        </button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>