@using TallerBecerraAguilera.Helpers
@model PaginatedList<TallerBecerraAguilera.Models.Usuarios>

<h1 class="mb-3">Usuarios</h1>

<a class="btn btn-primary mb-3" asp-action="Create">Nuevo Usuario</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Email</th>
            <th>Rol</th>
            <th>Avatar</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td>@u.email</td>
                <td>@u.rol</td>
                <td><img src="@u.avatar_path" width="40" class="rounded-circle" /></td>
                <td>
                    <a asp-action="Edit" asp-route-id="@u.id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="ResetPassword" asp-route-id="@u.id" class="btn btn-info btn-sm">Clave</a>
                    <a asp-action="Delete" asp-route-id="@u.id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="d-flex justify-content-between align-items-center mt-3">
    <div class="fw-bold">
        PÃ¡gina @Model.PageIndex de @Model.TotalPages
    </div>

    <div class="btn-group">
        <a asp-action="Index"
           asp-route-pageNumber="@(Model.PageIndex - 1)"
           class="btn btn-outline-primary @(!Model.HasPreviousPage ? "disabled" : "")">
            <i class="bi bi-chevron-left"></i> Anterior
        </a>

        <a asp-action="Index"
           asp-route-pageNumber="@(Model.PageIndex + 1)"
           class="btn btn-outline-primary @(!Model.HasNextPage ? "disabled" : "")">
            Siguiente <i class="bi bi-chevron-right"></i>
        </a>
    </div>
</div>
