@model List<TallerBecerraAguilera.Models.OtRepuestos>

@{
    ViewData["Title"] = "Historial de Repuestos Usados";
}

<div class="container mx-auto px-4 py-8">

    <div class="flex flex-col md:flex-row justify-between items-center mb-8 gap-4">
        <div class="flex items-center gap-4">
            <div class="p-3 bg-indigo-100 rounded-full text-indigo-600 shadow-sm">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
                </svg>
            </div>
            <div>
                <h1 class="text-3xl font-bold text-indigo-800">Repuestos Utilizados</h1>
                <p class="text-gray-500 mt-1">Registro de consumo de materiales por Orden de Trabajo.</p>
            </div>
        </div>

        <a asp-controller="Repuestos" asp-action="Index" class="bg-white text-gray-700 font-semibold py-2 px-4 border border-gray-300 rounded-lg shadow-sm hover:bg-gray-50 transition duration-150 ease-in-out flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
            </svg>
            Volver al Inventario
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="bg-gray-50 border-2 border-dashed border-gray-300 rounded-xl p-12 text-center flex flex-col items-center justify-center">
            <div class="bg-gray-100 p-4 rounded-full mb-3">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-700">Sin consumos registrados</h3>
            <p class="text-gray-500 mt-1 max-w-sm">
                No se han registrado salidas de repuestos en ninguna Orden de Trabajo aún.
            </p>
        </div>
    }
    else
    {
        <div class="bg-white rounded-xl shadow-lg border border-gray-100 overflow-hidden">
            <div class="overflow-x-auto">
                <table class="min-w-full leading-normal">
                    <thead>
                        <tr class="bg-indigo-50 border-b border-indigo-100 text-left">
                            <th class="px-5 py-3 text-xs font-bold text-indigo-600 uppercase tracking-wider">OT Vinculada</th>
                            <th class="px-5 py-3 text-xs font-bold text-indigo-600 uppercase tracking-wider">Repuesto / Descripción</th>
                            <th class="px-5 py-3 text-xs font-bold text-indigo-600 uppercase tracking-wider text-center">Cantidad</th>
                            <th class="px-5 py-3 text-xs font-bold text-indigo-600 uppercase tracking-wider">Responsable</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="hover:bg-gray-50 transition duration-150 border-b border-gray-100 last:border-b-0">
                                
                                <td class="px-5 py-4 whitespace-nowrap">
                                    <span class="inline-flex items-center px-2.5 py-1 rounded-md text-xs font-mono font-bold bg-blue-100 text-blue-700 border border-blue-200">
                                        OT #@item.ot_id
                                    </span>
                                </td>

                                <td class="px-5 py-4 whitespace-nowrap">
                                    <div class="text-sm font-bold text-gray-900">@item.Repuesto?.descripcion</div>
                                    </td>

                                <td class="px-5 py-4 whitespace-nowrap text-center">
                                    <span class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-gray-100 text-gray-800 font-bold text-sm border border-gray-200">
                                        @item.cantidad_usada
                                    </span>
                                </td>

                                <td class="px-5 py-4 whitespace-nowrap">
                                    <div class="flex items-center gap-2">
                                        <div class="w-8 h-8 rounded-full bg-indigo-100 flex items-center justify-center text-indigo-600 text-xs font-bold border border-indigo-200">
                                            @(item.Empleado?.Nombre?.Substring(0, 1) ?? "?")@(item.Empleado?.Apellido?.Substring(0, 1) ?? "")
                                        </div>
                                        <div>
                                            <p class="text-sm font-bold text-gray-700">@item.Empleado?.Nombre @item.Empleado?.Apellido</p>
                                            <p class="text-xs text-gray-400">Mecánico</p>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>