@model TallerBecerraAguilera.Models.OtRepuestos

@{
    ViewData["Title"] = "Registrar Consumo";

    var ots = ViewBag.OTs as IEnumerable<SelectListItem>;
    var repuestosList = ViewBag.RepuestosList as List<TallerBecerraAguilera.Models.Repuestos>;

    bool hayOTs = ots != null && ots.Any();
    bool hayRepuesto = Model?.Repuesto != null;
    bool sinStock = hayRepuesto && Model!.Repuesto!.cantidadStock <= 0;
}

<div class="container mx-auto px-4 py-8">

    <div class="mb-8 flex items-center gap-4">
        <div class="p-3 bg-indigo-100 rounded-full text-indigo-600">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none"
                 viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
            </svg>
        </div>
        <div>
            <h1 class="text-3xl font-bold text-indigo-800">Usar Repuesto</h1>
            <p class="text-gray-500 mt-1">
                Asignar material del inventario a una Orden de Trabajo.
            </p>
        </div>
    </div>

    <div class="bg-white rounded-xl shadow-lg border border-gray-100 overflow-hidden max-w-lg mx-auto">
        <div class="h-2 bg-gradient-to-r from-blue-500 to-indigo-600"></div>

        <div class="p-8">

            @* ================= NO HAY OTs ================= *@
            @if (!hayOTs)
            {
                <div class="text-center py-12">
                    <div class="mx-auto h-16 w-16 bg-yellow-50 rounded-full
                                flex items-center justify-center text-yellow-500 mb-4">
                        ⚠️
                    </div>

                    <h3 class="text-lg font-bold text-gray-900">
                        No tenés Órdenes de Trabajo activas
                    </h3>

                    <p class="mt-2 text-sm text-gray-500 max-w-sm mx-auto">
                        Para usar un repuesto necesitás una OT en estado
                        <span class="font-bold">En Reparación</span>.
                    </p>

                    <div class="mt-8">
                        <a asp-controller="Repuestos"
                           asp-action="Index"
                           class="inline-flex items-center px-6 py-3 rounded-lg
                                  text-white bg-indigo-600 hover:bg-indigo-700 transition">
                            Volver al Inventario
                        </a>
                    </div>
                </div>
            }

            @* ================= SIN STOCK ================= *@
            else if (sinStock)
            {
                <div class="text-center py-12">
                    <div class="mx-auto h-16 w-16 bg-red-50 rounded-full
                                flex items-center justify-center text-red-500 mb-4">
                        ❌
                    </div>

                    <h3 class="text-lg font-bold text-gray-900">
                        Repuesto sin stock
                    </h3>

                    <p class="mt-2 text-sm text-gray-500 max-w-sm mx-auto">
                        El repuesto
                        <span class="font-bold">
                            @Model!.Repuesto!.descripcion
                        </span>
                        no tiene stock disponible.
                    </p>

                    <div class="mt-8">
                        <a asp-controller="Repuestos"
                           asp-action="Index"
                           class="inline-flex items-center px-6 py-3 rounded-lg
                                  text-white bg-indigo-600 hover:bg-indigo-700 transition">
                            Volver al Inventario
                        </a>
                    </div>
                </div>
            }

            @* ================= FORM ================= *@
            else
            {
                <form asp-action="Usar" method="post" class="space-y-6">

                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="repuesto_id" />

                    <div asp-validation-summary="ModelOnly"
                         class="bg-red-50 text-red-600 p-4 rounded-lg mb-6
                                border border-red-200 text-sm">
                    </div>

                    <div class="bg-gray-50 p-4 rounded-lg border border-gray-200 mb-6">
                        <span class="text-xs font-bold text-gray-400 uppercase tracking-wide">
                            Repuesto a utilizar
                        </span>
                        <div class="font-bold text-gray-800 text-lg">
                            @Model!.Repuesto!.descripcion
                        </div>
                        <div class="text-sm text-gray-500">
                            Stock actual: @Model.Repuesto.cantidadStock
                        </div>
                    </div>

                    <div>
                        <label asp-for="ot_id"
                               class="block text-sm font-bold text-gray-700 mb-2 uppercase tracking-wide">
                            Orden de Trabajo
                        </label>

                        <select asp-for="ot_id"
                                asp-items="ots"
                                class="w-full px-4 py-3 rounded-lg bg-gray-50 border border-gray-300">
                            <option value="">-- Seleccione una OT --</option>
                        </select>
                    </div>

                    <div class="grid grid-cols-2 gap-6">
                        <div>
                            <label asp-for="cantidad_usada"
                                   class="block text-sm font-bold text-gray-700 mb-2 uppercase tracking-wide">
                                Cantidad
                            </label>

                            <input id="cantidadInput"
                                   asp-for="cantidad_usada"
                                   type="number"
                                   min="1"
                                   value="@Model?.cantidad_usada ?? 1"
                                   class="w-full px-4 py-3 rounded-lg bg-gray-50 border border-gray-300" />
                            <span asp-validation-for="cantidad_usada" class="text-red-500 text-xs mt-1"></span>
                        </div>

                        <div class="bg-gray-50 rounded-lg border border-gray-200 p-3
                                    flex flex-col justify-center items-end">
                            <span class="text-xs text-gray-500 uppercase font-bold">
                                Costo Estimado
                            </span>
                            <span id="costoTotal"
                                  class="text-2xl font-bold text-green-600">
                                $0.00
                            </span>
                        </div>
                    </div>

                    <div class="flex justify-end gap-4 pt-6 border-t border-gray-100">
                        <a asp-controller="Repuestos"
                           asp-action="Index"
                           class="text-gray-600 hover:text-indigo-600 px-4 py-2">
                            Cancelar
                        </a>

                        <button type="submit"
                                class="bg-indigo-600 hover:bg-indigo-700 text-white
                                       font-bold py-3 px-8 rounded-lg shadow-lg">
                            Confirmar Uso
                        </button>
                    </div>

                </form>
            }

        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {

        const cantidadInput = document.getElementById('cantidadInput');
        const costoLabel = document.getElementById('costoTotal');

        const precioUnitario =
            @((Model?.Repuesto?.precioUnitario ?? 0)
                .ToString(System.Globalization.CultureInfo.InvariantCulture));

        function actualizarCosto() {
            if (!cantidadInput) return;
            const cantidad = parseInt(cantidadInput.value) || 0;
            costoLabel.textContent = '$' + (precioUnitario * cantidad).toFixed(2);
        }

        if (cantidadInput) {
            cantidadInput.addEventListener('input', actualizarCosto);
            actualizarCosto();
        }
    });
</script>
