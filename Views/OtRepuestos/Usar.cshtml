@model TallerBecerraAguilera.Models.OtRepuestos

@{
    ViewData["Title"] = "Registrar Consumo";
    
    // Lista de OTs
    var ots = ViewBag.OTs as IEnumerable<SelectListItem>; 
    
    // Lista de Repuestos (para el select y JS)
    var repuestosList = ViewBag.RepuestosList as List<TallerBecerraAguilera.Models.Repuestos>; 
}

<div class="container mx-auto px-4 py-8">

    <div class="mb-8 flex items-center gap-4">
        <div class="p-3 bg-indigo-100 rounded-full text-indigo-600">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
            </svg>
        </div>
        <div>
            <h1 class="text-3xl font-bold text-indigo-800">Usar Repuesto</h1>
            <p class="text-gray-500 mt-1">Asignar material del inventario a una Orden de Trabajo.</p>
        </div>
    </div>

    <div class="bg-white rounded-xl shadow-lg border border-gray-100 overflow-hidden max-w-lg mx-auto">
        <div class="h-2 bg-gradient-to-r from-blue-500 to-indigo-600"></div>

        <div class="p-8">
            <form asp-action="Usar" method="post" class="space-y-6">
                
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="repuesto_id" />
                
                <div asp-validation-summary="ModelOnly" class="bg-red-50 text-red-600 p-4 rounded-lg mb-6 border border-red-200 text-sm"></div>

                @if (Model?.Repuesto != null)
                {
                    <div class="bg-gray-50 p-4 rounded-lg border border-gray-200 mb-6">
                        <span class="text-xs font-bold text-gray-400 uppercase tracking-wide">Repuesto a utilizar</span>
                        <div class="font-bold text-gray-800 text-lg">@Model.Repuesto.descripcion</div>
                        <div class="text-sm text-gray-500">Stock actual: @Model.Repuesto.cantidadStock</div>
                    </div>
                }

                <div>
                    <label asp-for="ot_id" class="block text-sm font-bold text-gray-700 mb-2 uppercase tracking-wide">Orden de Trabajo</label>
                    <div class="relative">
                        <select asp-for="ot_id" 
                                asp-items="ots" 
                                class="block w-full pl-4 pr-10 py-3 rounded-lg bg-gray-50 border border-gray-300 focus:border-indigo-500 focus:bg-white focus:ring-2 focus:ring-indigo-200 transition duration-200 appearance-none cursor-pointer">
                            <option value="">-- Seleccione una OT --</option>
                        </select>
                        <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-4 text-gray-500">
                            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
                        </div>
                    </div>
                    <span asp-validation-for="ot_id" class="text-red-500 text-xs mt-1"></span>
                </div>

                @if (Model?.repuesto_id == 0 || Model?.repuesto_id == null)
                {
                    <div>
                        <label asp-for="repuesto_id" class="block text-sm font-bold text-gray-700 mb-2 uppercase tracking-wide">Repuesto</label>
                        <div class="relative">
                            <select id="repuestoSelect" asp-for="repuesto_id" class="w-full pl-4 pr-10 py-3 rounded-lg bg-gray-50 border border-gray-300 focus:border-indigo-500 focus:bg-white focus:ring-2 focus:ring-indigo-200 transition duration-200 cursor-pointer appearance-none">
                                <option value="" data-precio="0">-- Seleccionar Repuesto --</option>
                                @if (repuestosList != null)
                                {
                                    foreach (var r in repuestosList)
                                    {
                                        // Usamos r.descripcion, r.cantidadStock, r.precioUnitario
                                        <option value="@r.id" data-precio="@r.precioUnitario">@r.descripcion (Stock: @r.cantidadStock) - $@r.precioUnitario</option>
                                    }
                                }
                            </select>
                             <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-4 text-gray-500">
                                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
                            </div>
                        </div>
                    </div>
                }

                <div class="grid grid-cols-2 gap-6">
                    <div>
                        <label asp-for="cantidad_usada" class="block text-sm font-bold text-gray-700 mb-2 uppercase tracking-wide">Cantidad</label>
                        <input id="cantidadInput" asp-for="cantidad_usada" type="number" min="1" class="w-full px-4 py-3 rounded-lg bg-gray-50 border border-gray-300 focus:border-indigo-500 focus:bg-white focus:ring-2 focus:ring-indigo-200 transition duration-200" value="1" />
                        <span asp-validation-for="cantidad_usada" class="text-red-500 text-xs mt-1"></span>
                    </div>

                    <div class="bg-gray-50 rounded-lg border border-gray-200 p-3 flex flex-col justify-center items-end">
                        <span class="text-xs text-gray-500 uppercase font-bold">Costo Estimado</span>
                        <span id="costoTotal" class="text-2xl font-bold text-green-600">$0.00</span>
                    </div>
                </div>

                <div class="flex items-center justify-end gap-4 mt-8 pt-6 border-t border-gray-100">
                    <a asp-controller="OrdenesTrabajo" asp-action="Index" class="text-gray-600 hover:text-indigo-600 font-medium px-4 py-2 rounded-lg hover:bg-gray-50 transition duration-150">
                        Cancelar
                    </a>
                    <button type="submit" class="bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 px-8 rounded-lg shadow-lg hover:shadow-xl transition duration-150 ease-in-out transform hover:-translate-y-0.5 flex items-center gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                        </svg>
                        Confirmar Uso
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const repuestoSelect = document.getElementById('repuestoSelect');
        const cantidadInput = document.getElementById('cantidadInput');
        const costoLabel = document.getElementById('costoTotal');

        function actualizarCosto() {
            // Si el select no existe (porque ya ven√≠a preseleccionado un repuesto), no hacemos nada
            if(!repuestoSelect) return;

            const selectedOption = repuestoSelect.options[repuestoSelect.selectedIndex];
            // Aseguramos que data-precio se lea correctamente, usando replace para comas si fuera necesario
            let precioStr = selectedOption.getAttribute('data-precio') || "0";
            const precio = parseFloat(precioStr.replace(',', '.')) || 0;
            const cantidad = parseInt(cantidadInput.value) || 0;
            
            const total = precio * cantidad;
            costoLabel.textContent = '$' + total.toFixed(2);
        }

        if(repuestoSelect) {
            repuestoSelect.addEventListener('change', actualizarCosto);
            // Llamada inicial por si ya hay algo seleccionado
            actualizarCosto();
        }
        
        if(cantidadInput) {
            cantidadInput.addEventListener('input', actualizarCosto);
        }
    });
</script>