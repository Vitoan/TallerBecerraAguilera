@model TallerBecerraAguilera.Models.OtRepuestos

@{
    ViewData["Title"] = "Usar Repuesto";
}

<h3 class="mb-3">ðŸ”§ Usar Repuesto</h3>

<form asp-action="Usar" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="repuesto_id" />

    <div class="mb-3">
        <label asp-for="ot_id" class="form-label"></label>
        <select asp-for="ot_id"
                asp-items="@(ViewBag.OTs as IEnumerable<SelectListItem>)"
                class="form-select">
            <option value="">Seleccione una OT</option>
        </select>
        <span asp-validation-for="ot_id" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="cantidad_usada" class="form-label"></label>
        <input asp-for="cantidad_usada" class="form-control" />
        <span asp-validation-for="cantidad_usada" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">
        <i class="bi bi-check-circle"></i> Confirmar uso
    </button>

    <a asp-controller="Repuestos" asp-action="Index" class="btn btn-secondary ms-2">
        Volver
    </a>
</form>
