@using TallerBecerraAguilera.Helpers
@model PaginatedList<TallerBecerraAguilera.Models.PedidosRepuestos>

@{
    ViewData["Title"] = "Pedidos de Repuestos";
}

<h2 class="fw-bold mb-4">@ViewData["Title"]</h2>

<table class="table table-bordered table-striped shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Proveedor</th>
            <th>Empleado</th>
            <th>Fecha</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>@item.Id</td>
            <td>@item.Proveedor?.Nombre</td>
            <td>@item.Empleado?.NombreCompleto</td>
            <td>@item.Fecha.ToString("dd/MM/yyyy")</td>
            <td>@item.Estado</td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Detalles</a>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>

                <form asp-action="CambiarEstado" method="post" class="d-inline">
                    <input type="hidden" name="pedidoId" value="@item.Id" />
                    <select name="estado" class="form-select d-inline w-auto">
                        <option value="Pendiente" selected="@((item.Estado == EstadoPedido.Pendiente))">Pendiente</option>
                        <option value="Recibido" selected="@((item.Estado == EstadoPedido.Recibido))">Recibido</option>
                        <option value="Cancelado" selected="@((item.Estado == EstadoPedido.Cancelado))">Cancelado</option>
                    </select>
                    <button type="submit" class="btn btn-success btn-sm">Guardar</button>
                </form>
            </td>
        </tr>
}
    </tbody>
</table>

<div class="d-flex justify-content-between align-items-center mt-3">
    <div>
        PÃ¡gina @Model.PageIndex de @Model.TotalPages
    </div>

    <div>
        <a asp-action="Index"
           asp-route-pageNumber="@(Model.PageIndex - 1)"
           class="btn btn-outline-primary @(!Model.HasPreviousPage ? "disabled" : "")">
           <i class="bi bi-arrow-left"></i> Anterior
        </a>

        <a asp-action="Index"
           asp-route-pageNumber="@(Model.PageIndex + 1)"
           class="btn btn-outline-primary @(!Model.HasNextPage ? "disabled" : "")">
            Siguiente <i class="bi bi-arrow-right"></i>
        </a>
    </div>
</div>

<a asp-action="Create" class="btn btn-success mt-3">Nuevo Pedido</a>
