@model TallerBecerraAguilera.Models.PedidosRepuestos

@{
    ViewData["Title"] = $"Editar Pedido #{Model.Id}";
    var esAdmin = User.IsInRole("Administrador");
}

<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" />

<style>
    /* Ajuste visual para Select2 en entorno Tailwind */
    .select2-container--bootstrap-5 .select2-selection {
        border-color: #d1d5db; /* gray-300 */
        padding-top: 0.55rem;
        padding-bottom: 0.55rem;
        min-height: 48px;
        border-radius: 0.5rem;
    }
    .select2-container--bootstrap-5 .select2-selection--single .select2-selection__rendered {
        color: #374151; /* gray-700 */
        font-size: 0.95rem;
    }
</style>

<div class="container mx-auto px-4 py-8">

    <div class="mb-8 flex items-center gap-4">
        <div class="p-3 bg-indigo-100 rounded-full text-indigo-600 shadow-sm">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
            </svg>
        </div>
        <div>
            <h1 class="text-3xl font-bold text-indigo-800">Editar Pedido</h1>
            <p class="text-gray-500 mt-1">Modificando la orden <span class="font-mono font-bold text-indigo-600">#@Model.Id</span></p>
        </div>
    </div>

    <div class="bg-white rounded-xl shadow-lg border border-gray-100 overflow-hidden max-w-2xl mx-auto">
        <div class="h-2 bg-gradient-to-r from-indigo-500 to-purple-600"></div>

        <div class="p-8">
            <form asp-action="Edit" method="post" class="space-y-6">
                
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                
                <div>
                    <label class="block text-sm font-bold text-gray-700 mb-2 uppercase tracking-wide">Proveedor</label>
                    <div class="relative">
                        <select asp-for="ProveedorId" class="w-full" id="buscadorProveedores">
                            </select>
                    </div>
                    <span asp-validation-for="ProveedorId" class="text-red-500 text-xs mt-1"></span>
                </div>

                @if (esAdmin)
                {
                    <div>
                        <label class="block text-sm font-bold text-gray-700 mb-2 uppercase tracking-wide">Empleado Solicitante</label>
                        <div class="relative">
                            <select asp-for="EmpleadoId" class="w-full" id="buscadorEmpleados">
                                </select>
                        </div>
                        <span asp-validation-for="EmpleadoId" class="text-red-500 text-xs mt-1"></span>
                    </div>
                }
                else
                {
                    <input type="hidden" asp-for="EmpleadoId" value="@ViewBag.EmpleadoId" />
                }

                <div>
                    <label asp-for="Estado" class="block text-sm font-bold text-gray-700 mb-2 uppercase tracking-wide">Estado del Pedido</label>
                    <div class="relative">
                        <select asp-for="Estado" class="w-full pl-4 pr-10 py-3 rounded-lg bg-gray-50 border border-gray-300 focus:border-indigo-500 focus:bg-white focus:ring-2 focus:ring-indigo-200 transition duration-200 cursor-pointer appearance-none">
                            <option value="Pendiente">Pendiente</option>
                            <option value="Recibido">Recibido</option>
                            <option value="Cancelado">Cancelado</option>
                        </select>
                        <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-4 text-gray-500">
                            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
                        </div>
                    </div>
                    <span asp-validation-for="Estado" class="text-red-500 text-xs mt-1"></span>
                </div>

                <div class="flex items-center justify-end gap-4 mt-8 pt-6 border-t border-gray-100">
                    <a asp-action="Index" class="text-gray-600 hover:text-indigo-600 font-medium px-4 py-2 rounded-lg hover:bg-gray-50 transition duration-150">
                        Cancelar
                    </a>
                    <button type="submit" class="bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 px-8 rounded-lg shadow-lg hover:shadow-xl transition duration-150 ease-in-out transform hover:-translate-y-0.5 flex items-center gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                        </svg>
                        Guardar Cambios
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script>
        $(document).ready(function () {
            
            // --- Lógica Proveedor ---
            $('#buscadorProveedores').select2({
                theme: 'bootstrap-5',
                width: '100%',
                placeholder: 'Seleccione un proveedor',
                minimumInputLength: 1,
                ajax: {
                    url: '@Url.Action("GetProveedores", "PedidosRepuestos")',
                    dataType: 'json',
                    delay: 250,
                    data: function (params) { return { term: params.term }; },
                    processResults: function (data) { return { results: data.results }; },
                    cache: true
                }
            });

            // Precarga Proveedor
            var proveedorId = '@Model.ProveedorId';
            // Usamos null coalescing para evitar errores si el proveedor es nulo
            var proveedorTexto = '@(Model.Proveedor?.Nombre ?? "")'; 
            
            if (proveedorId && proveedorTexto) {
                var option = new Option(proveedorTexto, proveedorId, true, true);
                $('#buscadorProveedores').append(option).trigger('change');
            }

            // --- Lógica Empleado (Admin) ---
            @if (esAdmin)
            {
                <text>
                $('#buscadorEmpleados').select2({
                    theme: 'bootstrap-5',
                    width: '100%',
                    placeholder: 'Seleccione un empleado',
                    minimumInputLength: 1,
                    ajax: {
                        url: '@Url.Action("GetEmpleados", "PedidosRepuestos")',
                        dataType: 'json',
                        delay: 250,
                        data: function (params) { return { term: params.term }; },
                        processResults: function (data) { return { results: data.results }; },
                        cache: true
                    }
                });

                // Precarga Empleado
                var empleadoId = '@Model.EmpleadoId';
                var empleadoTexto = '@(Model.Empleado != null ? $"{Model.Empleado.Nombre} {Model.Empleado.Apellido}" : "")';
                
                if (empleadoId && empleadoTexto) {
                    var optionEmp = new Option(empleadoTexto, empleadoId, true, true);
                    $('#buscadorEmpleados').append(optionEmp).trigger('change');
                }
                </text>
            }
        });
    </script>
}