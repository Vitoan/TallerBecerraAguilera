@model TallerBecerraAguilera.Models.PedidosRepuestos

@{
    ViewData["Title"] = "Crear Pedido de Repuestos";
    var esAdmin = User.IsInRole("Admin");
}

<h2 class="fw-bold mb-4">@ViewData["Title"]</h2>

<div class="card p-4 shadow-sm">
    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group mb-3">
            <label asp-for="ProveedorId" class="control-label">Proveedor</label>
            <select asp-for="ProveedorId" class="form-control" asp-items="ViewBag.ProveedorId">
                <option value="">-- Seleccione un Proveedor --</option>
            </select>
            <span asp-validation-for="ProveedorId" class="text-danger"></span>
        </div>

        @if (esAdmin)
        {
            <div class="form-group mb-3">
                <label asp-for="EmpleadoId" class="control-label">Empleado</label>
                <select asp-for="EmpleadoId" class="form-control" asp-items="ViewBag.EmpleadoId">
                    <option value="">-- Seleccione un Empleado --</option>
                </select>
                <span asp-validation-for="EmpleadoId" class="text-danger"></span>
            </div>
        }
        else
        {
            <input type="hidden" asp-for="EmpleadoId" value="@ViewBag.EmpleadoId" />
        }

        <div class="form-group mb-4">
            <label asp-for="Fecha" class="control-label">Fecha</label>
            <input asp-for="Fecha" type="date" class="form-control" />
            <span asp-validation-for="Fecha" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">Crear Pedido</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
    </form>
</div>
