@model TallerBecerraAguilera.Models.PedidosRepuestos

@{
    ViewData["Title"] = "Crear Nuevo Pedido de Repuestos";
}

<h2 class="fw-bold mb-4">@ViewData["Title"]</h2>

<div class="card p-4 shadow-sm">
    <form asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        @* 1. CAMPO PROVEEDOR (Combobox corregido) *@
        <div class="form-group mb-3">
            <label asp-for="ProveedorId" class="control-label">Proveedor</label>
            
            @* Este asp-items debe coincidir con el ViewBag que cargas en el Controller *@
            <select asp-for="ProveedorId" 
                    class="form-control" 
                    asp-items="ViewBag.ProveedorId">
                <option value="">-- Seleccione un Proveedor --</option>
            </select>
            
            <span asp-validation-for="ProveedorId" class="text-danger"></span>
        </div>

        @* 2. CAMPO EMPLEADO *@
        <div class="form-group mb-3">
            <label asp-for="EmpleadoId" class="control-label">Empleado Solicitante</label>
            
            @* Asume que el controlador también carga ViewBag.EmpleadoId * @
            <select asp-for="EmpleadoId" 
                    class="form-control" 
                    asp-items="ViewBag.EmpleadoId">
                <option value="">-- Seleccione un Empleado --</option>
            </select>
            
            <span asp-validation-for="EmpleadoId" class="text-danger"></span>
        </div>

        @* 3. CAMPO FECHA (Corregido: Usa la propiedad 'Fecha' del modelo) *@
        <div class="form-group mb-4">
            <label asp-for="Fecha" class="control-label">Fecha de Pedido</label>
            <input asp-for="Fecha" type="date" class="form-control" />
            <span asp-validation-for="Fecha" class="text-danger"></span>
        </div>

        <hr />
        
        <button type="submit" class="btn btn-success">Crear Pedido (Siguiente: añadir repuestos)</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar y Volver</a>
    </form>
</div>