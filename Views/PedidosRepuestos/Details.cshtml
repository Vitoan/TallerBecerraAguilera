@model TallerBecerraAguilera.Models.PedidosRepuestos
@using TallerBecerraAguilera.Models

@{
    ViewData["Title"] = "Detalle del Pedido #" + Model.Id;
    bool puedeEditar = Model.Estado == EstadoPedido.Pendiente;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold">üìÑ @ViewData["Title"]</h2>
    <div>
        <span
            class="badge bg-@(Model.Estado == EstadoPedido.Pendiente ? "warning" : (Model.Estado == EstadoPedido.Recibido ? "success" : "danger")) fs-6">
            @Model.Estado
        </span>
    </div>
</div>

<div class="card shadow-sm mb-4">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">Informaci√≥n General</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <strong>Proveedor:</strong> @(Model.Proveedor?.Nombre ?? "N/A")
            </div>
            <div class="col-md-4">
                <strong>Fecha Solicitud:</strong> @Model.Fecha.ToString("dd/MM/yyyy")
            </div>
            <div class="col-md-4">
                <strong>Empleado:</strong> @(Model.Empleado?.NombreCompleto ?? "N/A")
            </div>
        </div>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-secondary text-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0">üì¶ Repuestos Solicitados</h5>

        @if (puedeEditar)
        {
            @* Bot√≥n que lleva a la acci√≥n de agregar un item a ESTE pedido *@
                <a asp-controller="PedidoRepuestos" asp-action="Create" asp-route-pedidoId="@Model.Id"
                class="btn btn-light btn-sm">
                <i class="bi bi-plus-circle"></i> Agregar Repuesto
            </a>
        }
    </div>
    <div class="card-body p-0">
        <table class="table table-striped mb-0">
            <thead>
                <tr>
                    <th>Repuesto</th>
                    <th class="text-center">Cant. Solicitada</th>
                    <th class="text-center">Cant. Recibida</th>
                    <th class="text-end">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Detalles != null && Model.Detalles.Any())
                {
                    foreach (var item in Model.Detalles)
                    {
                        <tr>
                            <td>
                                <strong>@item.Repuesto?.descripcion</strong> <br />
                                <small class="text-muted">C√≥d: @item.Repuesto?.codigo</small>
                            </td>
                            <td class="text-center">@item.cantidad_solicitada</td>
                            <td class="text-center">
                                @if (Model.Estado == EstadoPedido.Recibido)
                                {
                                    <span class="badge bg-success">@item.cantidad_recibida</span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td class="text-end">
                                @if (puedeEditar)
                                {
                                    <form asp-controller="PedidoRepuestos" asp-action="Delete" method="post" class="d-inline">

                                        @* Enviamos los IDs necesarios para que el Controlador sepa qu√© borrar *@
                <input type="hidden" name="pedidoId" value="@Model.Id" />
                                        <input type="hidden" name="repuestoId" value="@item.repuesto_id" />

                                        <button type="submit" class="btn btn-danger btn-sm" title="Quitar repuesto"
                                            onclick="return confirm('¬øEst√°s seguro de que deseas eliminar este repuesto del pedido?');">
                                            üóëÔ∏è
                                        </button>

                                    </form>
                                }
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center text-muted py-4">
                            <em>No hay repuestos agregados a este pedido a√∫n.</em>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Index" class="btn btn-secondary">
        ‚¨Ö Volver al listado
    </a>
</div>