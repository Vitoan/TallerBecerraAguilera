<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Taller Becerra Aguilera</title>
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    
    <nav class="navbar navbar-expand-lg navbar-dark" style="background:#111;border-bottom:3px solid #18a2b8;">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold text-info" asp-controller="Home" asp-action="Index">
                🔧 Taller Becerra Aguilera
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#menuTaller">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="menuTaller">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link" asp-controller="Ordenes" asp-action="Create">➕ Nueva OT</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Herramientas" asp-action="Index">🔧 Solicitar herramienta</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Repuestos" asp-action="Index">📦 Inventario</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Pedidos" asp-action="Create">📩 Pedidos</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Proveedores" asp-action="Index">🏭 Proveedores</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Clientes" asp-action="Index">👤 Clientes</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Vehiculos" asp-action="Index">🚗 Vehículos</a></li>
                </ul>

                <div class="d-flex text-light small">
                    <span class="me-3">👤 @User.Identity?.Name</span>
                    <a asp-controller="Auth" asp-action="Logout" class="btn btn-sm btn-danger">Salir</a>
                </div>
            </div>
        </div>
    </nav>
    
    <div class="container-fluid mt-3">
        <main role="main" class="pb-3">
            
            @RenderBody() 
            
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container-fluid">
            &copy; @DateTime.Now.Year - Taller Becerra Aguilera
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>