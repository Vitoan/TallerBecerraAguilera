@model List<TallerBecerraAguilera.Models.ViewModels.UltimasOTsViewModel>

@if (Model == null || !Model.Any())
{
    <div class="p-8 text-center bg-gray-50 rounded-lg border border-dashed border-gray-300">
        <p class="text-gray-500">No hay órdenes de trabajo recientes para mostrar.</p>
    </div>
}
else
{
    <div class="overflow-x-auto">
        <table class="min-w-full leading-normal">
            <thead>
                <tr class="bg-gray-50 border-b border-gray-100 text-left">
                    <th class="px-5 py-3 text-xs font-semibold text-gray-500 uppercase tracking-wider">OT #</th>
                    <th class="px-5 py-3 text-xs font-semibold text-gray-500 uppercase tracking-wider">Vehículo</th>
                    <th class="px-5 py-3 text-xs font-semibold text-gray-500 uppercase tracking-wider">Falla</th>
                    <th class="px-5 py-3 text-xs font-semibold text-gray-500 uppercase tracking-wider">Ingreso</th>
                    <th class="px-5 py-3 text-xs font-semibold text-gray-500 uppercase tracking-wider">Estado</th>
                    <th class="px-5 py-3 text-xs font-semibold text-gray-500 uppercase tracking-wider">Asignado</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ot in Model)
                {
                    <tr class="hover:bg-gray-50 transition duration-150 border-b border-gray-100 last:border-b-0">
                        <td class="px-5 py-4 whitespace-nowrap">
                            <a asp-controller="OrdenesTrabajo" asp-action="Details" asp-route-id="@ot.Id" class="text-indigo-600 font-bold hover:underline">
                                #@ot.Id
                            </a>
                        </td>
                        <td class="px-5 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                            @ot.Patente
                        </td>
                        <td class="px-5 py-4 text-sm text-gray-500 truncate max-w-xs">
                            @ot.DescripcionFalla
                        </td>
                        <td class="px-5 py-4 whitespace-nowrap text-sm text-gray-500">
                            @ot.FechaIngreso.ToShortDateString()
                        </td>
                        <td class="px-5 py-4 whitespace-nowrap">
                            <span class="px-2 py-1 inline-flex text-xs leading-5 font-semibold rounded-full @GetBadgeClass(ot!.Estado!)">
                                @ot.Estado
                            </span>
                        </td>
                        <td class="px-5 py-4 whitespace-nowrap text-sm text-gray-500">
                            @ot.EmpleadoAsignado
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@functions {
    string GetBadgeClass(string estado)
    {
        return estado switch
        {
            "Pendiente" => "bg-yellow-100 text-yellow-800 border border-yellow-200",
            "EnReparacion" => "bg-orange-100 text-orange-800 border border-orange-200",
            "Finalizada" => "bg-green-100 text-green-800 border border-green-200",
            "Entregada" => "bg-blue-100 text-blue-800 border border-blue-200",
            _ => "bg-gray-100 text-gray-800"
        };
    }
}