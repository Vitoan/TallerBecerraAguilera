@model TallerBecerraAguilera.Models.Repuestos

<h2>Editar Repuesto</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="id"/>

    <div class="form-group">
        <label>Código</label>
        <input asp-for="codigo" class="form-control" />
    </div>


    <div class="form-group">
        <label>Descripción</label>
        <input asp-for="descripcion" class="form-control" />
    </div>

    <div class="form-group">
        <label>Precio Unitario</label>
        <input asp-for="precioUnitario" class="form-control" />
    </div>

    <div class="form-group">
        <label>Stock</label>
        <input asp-for="cantidadStock" class="form-control" />
    </div>

    <div class="form-group">
        <label>Stock Mínimo</label>
        <input asp-for="stockMinimo" class="form-control" />
    </div>

    <div class="form-group">
        <label>Proveedor</label>
        <select asp-for="proveedorId" asp-items="ViewBag.ProveedorId" class="form-control"></select>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</form>
