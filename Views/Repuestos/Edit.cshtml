@model TallerBecerraAguilera.Models.Repuestos

<h2>Editar Repuesto</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id"/>

    <div class="form-group">
        <label>Descripción</label>
        <input asp-for="Descripcion" class="form-control" />
    </div>

    <div class="form-group">
        <label>Precio Unitario</label>
        <input asp-for="PrecioUnitario" class="form-control" />
    </div>

    <div class="form-group">
        <label>Stock</label>
        <input asp-for="CantidadStock" class="form-control" />
    </div>

    <div class="form-group">
        <label>Stock Mínimo</label>
        <input asp-for="StockMinimo" class="form-control" />
    </div>

    <div class="form-group">
        <label>Proveedor</label>
        <select asp-for="ProveedorId" asp-items="ViewBag.Proveedores" class="form-control"></select>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</form>
