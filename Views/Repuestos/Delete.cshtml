@model TallerBecerraAguilera.Models.Repuestos

@{
    ViewData["Title"] = "Eliminar Repuesto";
}

<div class="container mx-auto px-4 py-16">

    <div class="max-w-lg mx-auto bg-white rounded-xl shadow-2xl overflow-hidden border border-red-100">
        
        <div class="h-2 bg-gradient-to-r from-red-500 to-orange-500"></div>

        <div class="p-8 text-center">
            
            <div class="mx-auto flex items-center justify-center h-16 w-16 rounded-full bg-red-100 mb-6">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                </svg>
            </div>

            <h2 class="text-2xl font-bold text-gray-800 mb-2">¿Eliminar Repuesto?</h2>
            <p class="text-gray-500 mb-8">
                ¿Estás seguro de que deseas eliminar este artículo del inventario? Esta acción no se puede deshacer.
            </p>

            <div class="bg-gray-50 rounded-lg p-6 border border-gray-200 text-left mb-8">
                <div class="mb-4">
                    <span class="text-xs font-bold text-gray-400 uppercase tracking-wide">Descripción</span>
                    <p class="text-lg font-bold text-gray-800">@Model.descripcion</p>
                </div>
                
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <span class="text-xs font-bold text-gray-400 uppercase tracking-wide">Código</span>
                        <p class="font-mono text-sm text-gray-600 bg-white border border-gray-200 rounded px-2 py-1 w-fit mt-1">
                            @Model.codigo
                        </p>
                    </div>
                    <div>
                        <span class="text-xs font-bold text-gray-400 uppercase tracking-wide">Stock Actual</span>
                        <p class="font-bold @(Model.cantidadStock > 0 ? "text-green-600" : "text-red-500")">
                            @Model.cantidadStock unidades
                        </p>
                    </div>
                </div>
            </div>

            <form asp-action="Delete" method="post" class="flex flex-col gap-3">
                <input type="hidden" asp-for="id" />
                
                <button type="submit" class="w-full bg-red-600 hover:bg-red-700 text-white font-bold py-3 px-4 rounded-lg shadow-lg hover:shadow-xl transition duration-150 transform hover:-translate-y-0.5 flex items-center justify-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
                    </svg>
                    Confirmar Eliminación
                </button>
                
                <a asp-action="Index" class="w-full bg-white text-gray-700 font-bold py-3 px-4 rounded-lg border border-gray-300 hover:bg-gray-50 transition duration-150">
                    Cancelar
                </a>
            </form>

        </div>
    </div>
</div>