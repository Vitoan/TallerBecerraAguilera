@using TallerBecerraAguilera.Helpers
@model PaginatedList<TallerBecerraAguilera.Models.Repuestos>

@{
    ViewData["Title"] = "Inventario de Repuestos";
    var esAdmin = User.IsInRole("Administrador");
    var esEmpleado = User.IsInRole("Empleado");
}

<div class="container mx-auto px-4 py-8">

    <div class="flex flex-col md:flex-row justify-between items-center mb-6 gap-4">
        <div>
            <h1 class="text-3xl font-bold text-indigo-800">@ViewData["Title"]</h1>
            <p class="text-gray-500 mt-1">Gestión de stock y catálogo de productos.</p>
        </div>

        @if (esAdmin)
        {
            <a asp-action="Create" class="bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-6 rounded-lg shadow-md transition duration-150 ease-in-out flex items-center gap-2 transform hover:-translate-y-0.5">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
                </svg>
                Agregar Repuesto
            </a>
        }
    </div>

    <div class="bg-white rounded-xl shadow-lg border border-gray-100 overflow-hidden">
        <div class="overflow-x-auto">
            <table class="min-w-full leading-normal">
                <thead>
                    <tr class="bg-indigo-50 border-b border-indigo-100 text-left">
                        <th class="px-5 py-3 text-xs font-bold text-indigo-600 uppercase tracking-wider">Código</th>
                        <th class="px-5 py-3 text-xs font-bold text-indigo-600 uppercase tracking-wider">Descripción</th>
                        <th class="px-5 py-3 text-xs font-bold text-indigo-600 uppercase tracking-wider text-center">Stock</th>
                        <th class="px-5 py-3 text-xs font-bold text-indigo-600 uppercase tracking-wider text-right">Precio</th>
                        <th class="px-5 py-3 text-xs font-bold text-indigo-600 uppercase tracking-wider">Proveedor</th>
                        <th class="px-5 py-3 text-xs font-bold text-indigo-600 uppercase tracking-wider text-right">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="hover:bg-gray-50 transition duration-150 border-b border-gray-200 last:border-b-0">
                            
                            <td class="px-5 py-4 whitespace-nowrap">
                                <span class="font-mono text-sm font-bold text-gray-600 bg-gray-100 px-2 py-1 rounded border border-gray-200">
                                    @item.codigo
                                </span>
                            </td>

                            <td class="px-5 py-4 whitespace-nowrap">
                                <div class="text-sm font-bold text-gray-900">@item.descripcion</div>
                            </td>

                            <td class="px-5 py-4 whitespace-nowrap text-center">
                                @if (item.cantidadStock <= item.stockMinimo)
                                {
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-bold bg-red-100 text-red-800 border border-red-200 animate-pulse" title="Stock Mínimo: @item.stockMinimo">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 mr-1" viewBox="0 0 20 20" fill="currentColor">
                                            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                                        </svg>
                                        @item.cantidadStock (Bajo)
                                    </span>
                                }
                                else
                                {
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800 border border-green-200">
                                        @item.cantidadStock Unid.
                                    </span>
                                }
                            </td>

                            <td class="px-5 py-4 whitespace-nowrap text-right">
                                <div class="text-sm font-bold text-green-600">
                                    @item.precioUnitario.ToString("C")
                                </div>
                            </td>

                            <td class="px-5 py-4 whitespace-nowrap text-sm text-gray-500">
                                @(item.Proveedor?.Nombre ?? "-")
                            </td>

                            <td class="px-5 py-4 whitespace-nowrap text-right text-sm font-medium">
                                <div class="flex justify-end items-center gap-2">
                                    @if (esAdmin)
                                    {
                                        <a asp-action="Edit" asp-route-id="@item.id" class="text-amber-600 hover:text-amber-900 bg-amber-50 hover:bg-amber-100 p-2 rounded-lg transition" title="Editar">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                                                <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
                                            </svg>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.id" class="text-red-600 hover:text-red-900 bg-red-50 hover:bg-red-100 p-2 rounded-lg transition" title="Eliminar">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                                                <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
                                            </svg>
                                        </a>
                                    }
                                    else if (esEmpleado)
                                    {
                                        <a asp-controller="OtRepuestos" asp-action="Usar" asp-route-repuestoId="@item.id" class="bg-green-600 hover:bg-green-700 text-white text-xs font-bold py-2 px-3 rounded shadow transition flex items-center gap-1">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                                            </svg>
                                            Usar
                                        </a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
        <div class="bg-gray-50 px-5 py-3 border-t border-gray-200 flex items-center justify-between">
            <span class="text-sm text-gray-700">
                Página <span class="font-bold">@Model.PageIndex</span> de <span class="font-bold">@Model.TotalPages</span>
            </span>
            <div class="inline-flex gap-2">
                <a asp-action="Index" asp-route-pageNumber="@(Model.PageIndex - 1)" class="px-4 py-2 text-sm font-medium bg-white border border-gray-300 rounded-lg hover:bg-gray-50 text-gray-700 transition duration-150 @(!Model.HasPreviousPage ? "pointer-events-none opacity-50" : "")">
                    Anterior
                </a>
                <a asp-action="Index" asp-route-pageNumber="@(Model.PageIndex + 1)" class="px-4 py-2 text-sm font-medium bg-white border border-gray-300 rounded-lg hover:bg-gray-50 text-gray-700 transition duration-150 @(!Model.HasNextPage ? "pointer-events-none opacity-50" : "")">
                    Siguiente
                </a>
            </div>
        </div>
    </div>
</div>