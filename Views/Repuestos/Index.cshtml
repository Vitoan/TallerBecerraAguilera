@using TallerBecerraAguilera.Helpers
@model PaginatedList<TallerBecerraAguilera.Models.Repuestos>

@{
    ViewData["Title"] = "Inventario de Repuestos";
    var esAdmin = User.IsInRole("Administrador");
    var esEmpleado = User.IsInRole("Empleado");
}

<div class="container mx-auto px-4 py-8">

    <!-- Header -->
    <div class="flex flex-col md:flex-row justify-between items-center mb-6 gap-4">
        <div>
            <h1 class="text-3xl font-bold text-indigo-800">@ViewData["Title"]</h1>
            <p class="text-gray-500 mt-1">Gestión de stock y catálogo de productos.</p>
        </div>

        @if (esAdmin)
        {
            <a asp-action="Create"
               class="bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-6 rounded-lg
                      shadow-md transition duration-150 ease-in-out flex items-center gap-2
                      transform hover:-translate-y-0.5">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd"
                          d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z"
                          clip-rule="evenodd" />
                </svg>
                Agregar Repuesto
            </a>
        }
    </div>

    <!-- FILTRO -->
    <div class="bg-white rounded-xl shadow-lg border border-gray-100 overflow-hidden mb-6">
        <div class="bg-gray-50 p-5 border-b border-gray-100">
            <form method="get" class="grid grid-cols-1 md:grid-cols-12 gap-4 items-end">

                <div class="md:col-span-6 lg:col-span-4">
                    <label class="block text-xs font-bold text-gray-500 uppercase tracking-wide mb-1">
                        Filtrar por Stock
                    </label>

                    <select name="stock"
                            class="block w-full pl-3 pr-10 py-2 text-base border-gray-300
                                   focus:outline-none focus:ring-indigo-500 focus:border-indigo-500
                                   sm:text-sm rounded-md shadow-sm">

                        <option value="">-- Ver Todos --</option>
                        <option value="con" selected="@(ViewBag.StockSeleccionado == "con")">
                            Con stock
                        </option>
                        <option value="sin" selected="@(ViewBag.StockSeleccionado == "sin")">
                            Sin stock
                        </option>
                        <option value="bajo" selected="@(ViewBag.StockSeleccionado == "bajo")">
                            Stock bajo
                        </option>
                    </select>
                </div>

                <div class="md:col-span-3 lg:col-span-2">
                    <button type="submit"
                            class="w-full bg-indigo-600 border border-transparent rounded-md shadow-sm
                                   py-2 px-4 inline-flex justify-center text-sm font-medium text-white
                                   hover:bg-indigo-700 focus:outline-none focus:ring-2
                                   focus:ring-offset-2 focus:ring-indigo-500">
                        Filtrar
                    </button>
                </div>

                <div class="md:col-span-3 lg:col-span-2">
                    <a asp-action="Index"
                       class="w-full bg-white border border-gray-300 rounded-md shadow-sm
                              py-2 px-4 inline-flex justify-center text-sm font-medium text-gray-700
                              hover:bg-gray-50 focus:outline-none focus:ring-2
                              focus:ring-offset-2 focus:ring-indigo-500">
                        Limpiar
                    </a>
                </div>

            </form>
        </div>
    </div>

    <!-- TABLA -->
    <div class="bg-white rounded-xl shadow-lg border border-gray-100 overflow-hidden">
        <div class="overflow-x-auto">
            <table class="min-w-full leading-normal">
                <thead>
                    <tr class="bg-indigo-50 border-b border-indigo-100 text-left">
                        <th class="px-5 py-3 text-xs font-bold text-indigo-600 uppercase tracking-wider">Código</th>
                        <th class="px-5 py-3 text-xs font-bold text-indigo-600 uppercase tracking-wider">Descripción</th>
                        <th class="px-5 py-3 text-xs font-bold text-indigo-600 uppercase tracking-wider text-center">Stock</th>
                        <th class="px-5 py-3 text-xs font-bold text-indigo-600 uppercase tracking-wider text-right">Precio</th>
                        <th class="px-5 py-3 text-xs font-bold text-indigo-600 uppercase tracking-wider">Proveedor</th>
                        <th class="px-5 py-3 text-xs font-bold text-indigo-600 uppercase tracking-wider text-right">Acciones</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="hover:bg-gray-50 transition duration-150 border-b border-gray-200 last:border-b-0">

                            <td class="px-5 py-4 whitespace-nowrap">
                                <span class="font-mono text-sm font-bold text-gray-600 bg-gray-100 px-2 py-1 rounded border border-gray-200">
                                    @item.codigo
                                </span>
                            </td>

                            <td class="px-5 py-4 whitespace-nowrap">
                                <div class="text-sm font-bold text-gray-900">@item.descripcion</div>
                            </td>

                            <td class="px-5 py-4 whitespace-nowrap text-center">
                                @if (item.cantidadStock <= item.stockMinimo)
                                {
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-bold
                                                 bg-red-100 text-red-800 border border-red-200 animate-pulse">
                                        @item.cantidadStock (Bajo)
                                    </span>
                                }
                                else
                                {
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                                                 bg-green-100 text-green-800 border border-green-200">
                                        @item.cantidadStock Unid.
                                    </span>
                                }
                            </td>

                            <td class="px-5 py-4 whitespace-nowrap text-right">
                                <div class="text-sm font-bold text-green-600">
                                    @item.precioUnitario.ToString("C")
                                </div>
                            </td>

                            <td class="px-5 py-4 whitespace-nowrap text-sm text-gray-500">
                                @(item.Proveedor?.Nombre ?? "-")
                            </td>

                            <td class="px-5 py-4 whitespace-nowrap text-right text-sm font-medium">
                                <div class="flex justify-end items-center gap-2">
                                    @if (esAdmin)
                                    {
                                        <a asp-action="Edit" asp-route-id="@item.id"
                                           class="text-amber-600 hover:text-amber-900 bg-amber-50 hover:bg-amber-100
                                                  p-2 rounded-lg transition">
                                            Editar
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.id"
                                           class="text-red-600 hover:text-red-900 bg-red-50 hover:bg-red-100
                                                  p-2 rounded-lg transition">
                                            Eliminar
                                        </a>
                                    }
                                    else if (esEmpleado)
                                    {
                                        <a asp-controller="OtRepuestos" asp-action="Usar"
                                           asp-route-repuestoId="@item.id"
                                           class="bg-green-600 hover:bg-green-700 text-white text-xs font-bold
                                                  py-2 px-3 rounded shadow transition">
                                            Usar
                                        </a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- PAGINACIÓN -->
        <div class="bg-gray-50 px-5 py-3 border-t border-gray-200 flex items-center justify-between">
            <span class="text-sm text-gray-700">
                Página <span class="font-bold">@Model.PageIndex</span> de <span class="font-bold">@Model.TotalPages</span>
            </span>

            <div class="inline-flex gap-2">
                <a asp-action="Index"
                   asp-route-pageNumber="@(Model.PageIndex - 1)"
                   asp-route-stock="@ViewBag.StockSeleccionado"
                   class="px-4 py-2 text-sm font-medium bg-white border border-gray-300 rounded-lg
                          hover:bg-gray-50 text-gray-700 transition duration-150
                          @(!Model.HasPreviousPage ? "pointer-events-none opacity-50" : "")">
                    Anterior
                </a>

                <a asp-action="Index"
                   asp-route-pageNumber="@(Model.PageIndex + 1)"
                   asp-route-stock="@ViewBag.StockSeleccionado"
                   class="px-4 py-2 text-sm font-medium bg-white border border-gray-300 rounded-lg
                          hover:bg-gray-50 text-gray-700 transition duration-150
                          @(!Model.HasNextPage ? "pointer-events-none opacity-50" : "")">
                    Siguiente
                </a>
            </div>
        </div>
    </div>
</div>
