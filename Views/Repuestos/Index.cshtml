@using TallerBecerraAguilera.Helpers
@model PaginatedList<TallerBecerraAguilera.Models.Repuestos>

@{
    ViewData["Title"] = "Repuestos";
    var esAdmin = User.IsInRole("Administrador");
    var esEmpleado = User.IsInRole("Empleado");
}

<div class="d-sm-flex align-items-center justify-content-between mb-3">
    <h2>@ViewData["Title"]</h2>

    @if (esAdmin)
    {
        <a class="btn btn-primary" asp-action="Create">Agregar Repuesto</a>
    }
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-bordered table-striped mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Código</th>
                        <th>Descripción</th>
                        <th>Stock</th>
                        <th>Stock Mínimo</th>
                        <th>Precio</th>
                        <th>Proveedor</th>
                        <th class="text-center">Acción</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.codigo</td>
                        <td>@item.descripcion</td>
                        <td>@item.cantidadStock</td>
                        <td>@item.stockMinimo</td>
                        <td>@item.precioUnitario.ToString("C")</td>
                        <td>@item.Proveedor?.Nombre</td>
                        <td class="text-center">
                            @if (esAdmin)
                            {
                                <a class="btn btn-warning btn-sm"
                                   asp-action="Edit"
                                   asp-route-id="@item.id">
                                    Editar
                                </a>

                                <a class="btn btn-danger btn-sm"
                                   asp-action="Delete"
                                   asp-route-id="@item.id">
                                    Eliminar
                                </a>
                            }
                            else if (esEmpleado)
                            {
                                <a class="btn btn-success btn-sm"
                                    asp-controller="OtRepuestos"
                                    asp-action="Usar"
                                    asp-route-repuestoId="@item.id">
                                     Usar repuesto
                                    </a>
                            }
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="d-flex justify-content-between align-items-center mt-3">
    <div class="fw-bold">
        Página @Model.PageIndex de @Model.TotalPages
    </div>
    <div class="btn-group">
        <a asp-action="Index"
           asp-route-pageNumber="@(Model.PageIndex - 1)"
           class="btn btn-outline-primary @(!Model.HasPreviousPage ? "disabled" : "")">
            <i class="bi bi-chevron-left"></i> Anterior
        </a>

        <a asp-action="Index"
           asp-route-pageNumber="@(Model.PageIndex + 1)"
           class="btn btn-outline-primary @(!Model.HasNextPage ? "disabled" : "")">
            Siguiente <i class="bi bi-chevron-right"></i>
        </a>
    </div>
</div>
