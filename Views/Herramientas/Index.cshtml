@model IEnumerable<TallerBecerraAguilera.Models.Herramientas>

<h2>Herramientas</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Nueva Herramienta</a>
</p>

<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th>Foto</th>
            <th>Código</th>
            <th>Nombre</th>
            <th>Estado</th>
            <th>Ubicación</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>
                @if (item.Imagenes != null && item.Imagenes.Any())
                {
                    <img src="@item.Imagenes.First().Url" width="70" height="70" style="object-fit:cover;border-radius:6px;" />
                }
                else
                {
                    <span class="text-muted">Sin imagen</span>
                }
            </td>
            <td>@item.Codigo</td>
            <td>@item.Nombre</td>
            <td>@item.Estado</td>
            <td>@item.Ubicacion</td>
            <td>
                <a asp-controller="ImagenHerramientas" asp-action="Index" asp-route-herramientaId="@item.Id" class="btn btn-info btn-sm">Imágenes</a>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
