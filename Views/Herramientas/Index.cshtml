@using TallerBecerraAguilera.Helpers;
@using Microsoft.AspNetCore.Identity
@model PaginatedList<TallerBecerraAguilera.Models.Herramientas>

@{
    ViewData["Title"] = "Herramientas";
    var esAdmin = User.IsInRole("Administrador");
    var esEmpleado = User.IsInRole("Empleado");
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">游댢 Herramientas</h1>

    @if (esAdmin)
    {
        <a asp-action="Create" class="btn btn-primary btn-icon-split">
            <span class="icon"><i class="bi bi-plus-circle"></i></span>
            <span class="text">Nueva Herramienta</span>
        </a>
    }
</div>

@if (TempData["success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card shadow mb-4">
    <div class="card-body">

        <!-- FILTRO POR ESTADO -->
        <form method="get" class="mb-3">
            <div class="row g-2">
                <div class="col-md-4">
                    <select class="form-select" name="estado">
                        <option value="">-- Todas --</option>

                        @foreach (var estado in Enum.GetValues(typeof(EstadoHerramienta)))
                        {
                            <option value="@estado"
                                    selected="@(ViewBag.EstadoSeleccionado?.ToString() == estado.ToString())">
                                @estado
                            </option>
                        }
                    </select>

                </div>

                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">
                        Filtrar
                    </button>
                </div>

                <div class="col-md-2">
                    <a asp-action="Index" class="btn btn-secondary w-100">
                        Limpiar
                    </a>
                </div>
            </div>
        </form>

        <div class="table-responsive">
            <table class="table table-hover align-middle table-bordered">
                <thead class="table-light">
                    <tr>
                        <th>Foto</th>
                        <th>C칩digo</th>
                        <th>Nombre</th>
                        <th>Estado</th>
                        <th>Ubicaci칩n</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @if (item.Imagenes != null && item.Imagenes.Any())
                                {
                                    <img src="@item.Imagenes.First().Url"
                                         width="70" height="70"
                                         class="rounded"
                                         style="object-fit:cover;" />
                                }
                                else
                                {
                                    <span class="text-muted fst-italic">Sin imagen</span>
                                }
                            </td>

                            <td>@item.Codigo</td>
                            <td>@item.Nombre</td>

                            <td>
                                <span class="badge 
                                    @(item.Estado == EstadoHerramienta.Disponible ? "bg-success" :
                                      item.Estado == EstadoHerramienta.EnUso ? "bg-warning" :
                                      "bg-danger")">
                                    @item.Estado
                                </span>
                            </td>

                            <td>@item.Ubicacion</td>

                            <td class="text-center">

                                <!-- ADMINISTRADOR -->
                                @if (esAdmin)
                                {
                                    <a asp-controller="ImagenHerramientas" asp-action="Index"
                                       asp-route-herramientaId="@item.Id"
                                       class="btn btn-sm btn-info me-1">
                                        <i class="bi bi-images"></i> 
                                        <span class="d-none d-md-inline">Im치genes</span>
                                    </a>

                                    <a asp-action="Edit" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-warning me-1">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>

                                    <a asp-action="Delete" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                }

                                <!-- EMPLEADO -->
                                @if (esEmpleado && item.Estado == EstadoHerramienta.Disponible)
                                {
                                    <a asp-controller="OtHerramientas"
                                       asp-action="Create"
                                       asp-route-herramientaId="@item.Id"
                                       class="btn btn-sm btn-primary">
                                        <i class="bi bi-hand-index"></i> Pedir prestada
                                    </a>
                                }

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- PAGINACI칍N -->
        <div class="d-flex justify-content-between align-items-center mt-3">
            <div>
                P치gina @Model.PageIndex de @Model.TotalPages
            </div>

            <div>
                <a asp-action="Index"
                   asp-route-pageNumber="@(Model.PageIndex - 1)"
                   class="btn btn-outline-primary @(!Model.HasPreviousPage ? "disabled" : "")">
                    <i class="bi bi-arrow-left"></i> Anterior
                </a>

                <a asp-action="Index"
                   asp-route-pageNumber="@(Model.PageIndex + 1)"
                   class="btn btn-outline-primary @(!Model.HasNextPage ? "disabled" : "")">
                    Siguiente <i class="bi bi-arrow-right"></i>
                </a>
            </div>
        </div>

    </div>
</div>
