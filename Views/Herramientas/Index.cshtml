@using TallerBecerraAguilera.Helpers;
@using Microsoft.AspNetCore.Identity
@model PaginatedList<TallerBecerraAguilera.Models.Herramientas>

@{
    ViewData["Title"] = "Herramientas";
    var esAdmin = User.IsInRole("Administrador");
    var esEmpleado = User.IsInRole("Empleado");
}

<div class="container mx-auto px-4 py-8">

    <div class="flex flex-col md:flex-row justify-between items-center mb-6 gap-4">
        <div>
            <h1 class="text-3xl font-bold text-indigo-800">Inventario de Herramientas</h1>
            <p class="text-gray-500 mt-1">Gestión, ubicación y disponibilidad de equipos.</p>
        </div>

        @if (esAdmin)
        {
            <a asp-action="Create" class="bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-6 rounded-lg shadow-md transition duration-150 ease-in-out flex items-center gap-2 transform hover:-translate-y-0.5">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
                </svg>
                Nueva Herramienta
            </a>
        }
    </div>

    @if (TempData["success"] != null)
    {
        <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-6 rounded shadow-sm flex justify-between items-center" role="alert">
            <div>
                <p class="font-bold">¡Operación Exitosa!</p>
                <p>@TempData["success"]</p>
            </div>
            <button type="button" onclick="this.parentElement.remove()" class="text-green-700 hover:text-green-900">
                <span class="text-2xl">&times;</span>
            </button>
        </div>
    }

    <div class="bg-white rounded-xl shadow-lg border border-gray-100 overflow-hidden">
        
        <div class="bg-gray-50 p-5 border-b border-gray-100">
            <form method="get" class="grid grid-cols-1 md:grid-cols-12 gap-4 items-end">
                
                <div class="md:col-span-6 lg:col-span-4">
                    <label class="block text-xs font-bold text-gray-500 uppercase tracking-wide mb-1">Filtrar por Estado</label>
                    <div class="relative">
                        <select name="estado" class="block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md shadow-sm">
                            <option value="">-- Ver Todas --</option>
                            @foreach (var estado in Enum.GetValues(typeof(EstadoHerramienta)))
                            {
                                <option value="@estado" selected="@(ViewBag.EstadoSeleccionado?.ToString() == estado.ToString())">
                                    @estado
                                </option>
                            }
                        </select>
                    </div>
                </div>

                <div class="md:col-span-3 lg:col-span-2">
                    <button type="submit" class="w-full bg-indigo-600 border border-transparent rounded-md shadow-sm py-2 px-4 inline-flex justify-center text-sm font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z" />
                        </svg>
                        Filtrar
                    </button>
                </div>

                <div class="md:col-span-3 lg:col-span-2">
                    <a asp-action="Index" class="w-full bg-white border border-gray-300 rounded-md shadow-sm py-2 px-4 inline-flex justify-center text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        Limpiar
                    </a>
                </div>
            </form>
        </div>

        <div class="overflow-x-auto">
            <table class="min-w-full leading-normal">
                <thead>
                    <tr class="bg-indigo-50 border-b border-indigo-100 text-left">
                        <th class="px-5 py-3 text-xs font-bold text-indigo-600 uppercase tracking-wider">Foto</th>
                        <th class="px-5 py-3 text-xs font-bold text-indigo-600 uppercase tracking-wider">Código / Nombre</th>
                        <th class="px-5 py-3 text-xs font-bold text-indigo-600 uppercase tracking-wider">Estado</th>
                        <th class="px-5 py-3 text-xs font-bold text-indigo-600 uppercase tracking-wider">Ubicación</th>
                        <th class="px-5 py-3 text-xs font-bold text-indigo-600 uppercase tracking-wider text-right">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="hover:bg-gray-50 transition duration-150 border-b border-gray-200 last:border-b-0">
                            
                            <td class="px-5 py-4 whitespace-nowrap">
                                <div class="flex-shrink-0 h-16 w-16">
                                    @if (item.Imagenes != null && item.Imagenes.Any())
                                    {
                                        <img class="h-16 w-16 rounded-lg object-cover border border-gray-200 shadow-sm" src="@item.Imagenes.First().Url" alt="@item.Nombre" />
                                    }
                                    else
                                    {
                                        <div class="h-16 w-16 rounded-lg bg-gray-100 border border-gray-200 flex items-center justify-center text-gray-400">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                            </svg>
                                        </div>
                                    }
                                </div>
                            </td>

                            <td class="px-5 py-4">
                                <p class="text-xs font-bold text-gray-400 uppercase">@item.Codigo</p>
                                <p class="text-sm font-bold text-gray-900">@item.Nombre</p>
                            </td>

                            <td class="px-5 py-4 whitespace-nowrap">
                                @{
                                    var badgeColor = "bg-gray-100 text-gray-800"; // Default
                                    if (item.Estado == EstadoHerramienta.Disponible) { badgeColor = "bg-green-100 text-green-800 border-green-200"; }
                                    else if (item.Estado == EstadoHerramienta.EnUso) { badgeColor = "bg-yellow-100 text-yellow-800 border-yellow-200"; }
                                    else { badgeColor = "bg-red-100 text-red-800 border-red-200"; }
                                }
                                <span class="px-2 py-1 inline-flex text-xs leading-5 font-semibold rounded-full border @badgeColor">
                                    @item.Estado
                                </span>
                            </td>

                            <td class="px-5 py-4 whitespace-nowrap text-sm text-gray-600">
                                <div class="flex items-center gap-1">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                                        <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
                                    </svg>
                                    @item.Ubicacion
                                </div>
                            </td>

                            <td class="px-5 py-4 whitespace-nowrap text-right text-sm font-medium">
                                <div class="flex justify-end items-center gap-2">
                                    
                                    @if (esAdmin)
                                    {
                                        <a asp-controller="ImagenHerramientas" asp-action="Index" asp-route-herramientaId="@item.Id" class="text-blue-500 hover:text-blue-700 p-1" title="Gestionar Imágenes">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                            </svg>
                                        </a>

                                        <a asp-action="Edit" asp-route-id="@item.Id" class="text-indigo-600 hover:text-indigo-900 p-1" title="Editar">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                                                <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
                                            </svg>
                                        </a>

                                        <a asp-action="Delete" asp-route-id="@item.Id" class="text-red-500 hover:text-red-700 p-1" title="Eliminar">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                                                <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
                                            </svg>
                                        </a>
                                    }

                                    @if (esEmpleado && item.Estado == EstadoHerramienta.Disponible)
                                    {
                                        <a asp-controller="OtHerramientas" asp-action="Create" asp-route-herramientaId="@item.Id" class="bg-indigo-100 hover:bg-indigo-200 text-indigo-700 text-xs font-bold py-1 px-3 rounded shadow-sm transition duration-150 flex items-center gap-1">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 11.5V14m0-2.5v-6a1.5 1.5 0 113 0m-3 6a1.5 1.5 0 00-3 0v2a7.5 7.5 0 0015 0v-5a1.5 1.5 0 00-3 0m-6-3V11m0-5.5v-1a1.5 1.5 0 013 0v1m0 0V11" />
                                            </svg>
                                            Pedir
                                        </a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="bg-gray-50 px-5 py-3 border-t border-gray-200 flex items-center justify-between">
            <span class="text-sm text-gray-700">
                Página <span class="font-bold">@Model.PageIndex</span> de <span class="font-bold">@Model.TotalPages</span>
            </span>

            <div class="inline-flex gap-2">
                <a asp-action="Index"
                   asp-route-pageNumber="@(Model.PageIndex - 1)"
                   
                   class="px-4 py-2 text-sm font-medium bg-white border border-gray-300 rounded-lg hover:bg-gray-50 text-gray-700 transition duration-150 @(!Model.HasPreviousPage ? "pointer-events-none opacity-50" : "")">
                    Anterior
                </a>

                <a asp-action="Index"
                   asp-route-pageNumber="@(Model.PageIndex + 1)"
                   
                   class="px-4 py-2 text-sm font-medium bg-white border border-gray-300 rounded-lg hover:bg-gray-50 text-gray-700 transition duration-150 @(!Model.HasNextPage ? "pointer-events-none opacity-50" : "")">
                    Siguiente
                </a>
            </div>
        </div>
    </div>
</div>