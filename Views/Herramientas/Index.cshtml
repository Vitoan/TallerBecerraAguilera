@model IEnumerable<TallerBecerraAguilera.Models.Herramientas>

<h2>Herramientas</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Nueva Herramienta</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Código</th>
            <th>Nombre</th>
            <th>Estado</th>
            <th>Ubicación</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>@item.Codigo</td>
            <td>@item.Nombre</td>
            <td>@item.Estado</td>
            <td>@item.Ubicacion</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
